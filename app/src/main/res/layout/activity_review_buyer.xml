<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nestowl.brokerapp.ReviewBuyerActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/REVIEW_SUMBIT_BUYER_SUMBIT"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/brown_two"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp">


        <TextView
            android:id="@+id/id_submit_review_buyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="Submit"
            android:textColor="#fff"

            android:textSize="18sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">



                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/cross_icon"
                        android:layout_width="25dp"
                        android:id="@+id/ARTICLES_BACK"
                        android:layout_gravity="center_vertical"
                        android:layout_height="25sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:text="Review"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />



                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>


        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_marginTop="65dp"
        android:layout_marginBottom="75dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout

                    android:layout_marginLeft="05dp"
                    android:layout_marginRight="05dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/REVIEW_SUMBIT_BUYER_DP"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom|center_horizontal"
                            android:src="@drawable/user_icon_nest" />
                    </androidx.cardview.widget.CardView>

                    <FrameLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"

                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/REVIEW_SUMBIT_BUYER_NAME"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ace Associates"

                            android:textColor="#000"
                            android:textSize="16sp"

                            android:textStyle="bold" />




                    </FrameLayout>


                </LinearLayout>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#A7A6A6" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16sp"

                    android:layout_marginLeft="05dp"
                    android:layout_marginRight="05dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    android:text="Choose a Rating:"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">


                        <RatingBar
                            android:id="@+id/REVIEW_SUMBIT_BUYER_RATING"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:numStars="5"
                            android:scaleX="0.8"
                            android:scaleY="0.8" />


                    </FrameLayout>

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:textSize="10dp"
                        android:layout_height="wrap_content"

                        android:text="Your Rating"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="140dp">
                    <androidx.cardview.widget.CardView
                        android:background="@drawable/nest_pro_rectangle"
                        android:layout_width="match_parent"
                        android:layout_marginTop="03dp"
                        android:layout_marginLeft="05dp"
                        android:layout_marginRight="05dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="07dp"
                        android:layout_height="130dp">

                        <EditText
                            android:id="@+id/REVIEW_SUMBIT_BUYER_INPUT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@null"
                            android:backgroundTint="@null"
                            android:hint="Write a Review"
                            android:singleLine="false"
                            android:textColorHint="@color/black_light"
                            android:textSize="16sp" />



                    </androidx.cardview.widget.CardView>




                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"

                    android:layout_marginLeft="05dp"
                    android:layout_marginRight="05dp"
                    android:textColor="@color/black_light"
                    android:layout_height="wrap_content"
                    android:text="Describe your experiance, please be objective, respectful,and write at least 20 words."
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16sp"

                    android:layout_marginLeft="05dp"
                    android:layout_marginRight="05dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"

                    android:layout_height="wrap_content"
                    android:text="Property Detail:"
                    />
                <FrameLayout

                    android:background="@drawable/background_search"
                    android:layout_width="175dp"

                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="85dp">

                    <ImageView
                        android:id="@+id/imageView21"
                        android:layout_width="90dp"
                        android:layout_height="83dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/default_x_x" />


                    <LinearLayout
                        android:layout_marginLeft="98dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/REVIEW_SUMBIT_BUYER_P_NAME"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2 BHK"
                                android:textColor="#000"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/REVIEW_SUMBIT_BUYER_P_SIZE"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="02dp"
                            android:text="680 Sq.ft."

                            android:textColor="#000"

                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/REVIEW_SUMBIT_BUYER_P_BUDGET"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="02dp"
                            android:text="â‚¹ 1 cr"
                            android:textColor="#000"
                            android:textSize="10sp"

                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/location_top"
                                />


                            <TextView
                                android:id="@+id/REVIEW_SUMBIT_BUYER_P_CITY"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginLeft="05dp"
                                android:layout_marginTop="02dp"
                                android:text="Gurgaon"
                                android:textColor="#000"
                                android:textSize="10sp"

                                android:textStyle="bold" />


                        </LinearLayout>
                    </LinearLayout>

                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_marginLeft="05dp"
                    android:layout_marginRight="05dp"
                    android:layout_height="50dp">

                    <CheckBox

                        android:id="@+id/REVIEW_SUMBIT_BUYER_CHECK_BOX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp" />
                    <TextView
                        android:layout_gravity="center"
                        android:textColor="#000"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I confirm that the information submitted here is true and accurate."
                        />
                </LinearLayout>



            </LinearLayout>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#A7A6A6" />




        </LinearLayout>



    </ScrollView>

</FrameLayout>