                    android:layout_height="240dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/select_from_gallary_background">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_menu_gallery" />

                        <ImageView
                            android:id="@+id/profile_photo_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:fitsSystemWindows="true"
                            android:scaleType="fitXY" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center"
                            android:layout_marginLeft="@dimen/screen_sixteen_16sp"
                            android:layout_marginTop="40dp"
                            android:layout_marginRight="@dimen/screen_sixteen_16sp"
                            android:fontFamily="@font/roboto_mediaum_second"

                            android:text="Select from Gallary"
                            android:textColor="@color/black_color"
                            android:textSize="12sp"
                            android:visibility="gone"

                            />


                    </FrameLayout>


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="05dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <FrameLayout
                        android:layout_marginRight="06dp"
                        android:layout_weight="1"
                        android:id="@+id/profile_add_photos"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/verify_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_gravity="center"
                            android:fontFamily="@font/second"
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ Add Photos"

                            />


                    </FrameLayout>


                </LinearLayout>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/post_property_padding_20dp"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:textColor="@color/brown_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Add More"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/filter_24sp"
                    android:text="Any Extra Achivement(Optional)"
                    android:textColor="#000"

                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_third"
                    android:layout_marginRight="20dp"
                    android:textSize="16sp"

                    />
                <LinearLayout
                    android:layout_marginLeft="@dimen/post_property_padding_20dp"
                    android:layout_marginRight="@dimen/post_property_padding_20dp"

                    android:layout_marginTop="@dimen/filter_18sp"

                    android:orientation="horizontal"

                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <FrameLayout
