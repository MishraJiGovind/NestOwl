                    android:layout_marginRight="20dp"
                    android:layout_marginTop="05dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <FrameLayout
                        android:layout_marginRight="06dp"
                        android:layout_weight="1"
                        android:id="@+id/logo_add_photos"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/verify_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_gravity="center"
                            android:fontFamily="@font/second"
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ Add Photos"

                            />


                    </FrameLayout>


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/filter_24sp"
                    android:text="Do you provide pick drop facility to customer for site visit"
                    android:textColor="#000"

                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_third"
                    android:layout_marginRight="20dp"
                    android:textSize="16sp"

                    />
                <HorizontalScrollView
                    android:fillViewport="true"
                    android:layout_marginTop="@dimen/filter_18sp"
                    android:measureAllChildren="false"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:textSize="14sp"
                                android:id="@+id/drop_facility_yes"
                                android:background="@drawable/employe_circle_rounded"
                                android:gravity="center"
                                android:fontFamily="@font/roboto_third"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:textColor="@color/black_font"
                                android:layout_height="@dimen/filters_rounded_30sp"
                                android:text="yes"

                                />


                        </FrameLayout>
                        <FrameLayout
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:textSize="14sp"
                                android:background="@drawable/employe_circle_rounded"
                                android:gravity="center"
                                android:id="@+id/drop_facility_no"
                                android:fontFamily="@font/roboto_third"
                                android:paddingRight="20dp"
                                android:paddingLeft="20dp"
                                android:textColor="@color/black_font"
                                android:layout_height="@dimen/filters_rounded_30sp"
                                android:text="No"

                                />


                        </FrameLayout>
                        <FrameLayout
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:background="@drawable/employe_circle_rounded"

                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:id="@+id/if_customer_id"
                                android:fontFamily="@font/roboto_third"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:textColor="@color/black_font"
                                android:layout_height="@dimen/filters_rounded_30sp"
                                android:text="If Customer Demands"

                                />


                        </FrameLayout>







                    </LinearLayout>




                </HorizontalScrollView>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/filter_24sp"
                    android:text="Vehicle type you own (for customer comfort to visit property)"
                    android:textColor="#000"

                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_third"
                    android:layout_marginRight="20dp"
                    android:textSize="16sp"

                    />
                <HorizontalScrollView
                    android:fillViewport="true"
                    android:layout_marginTop="@dimen/filter_18sp"
                    android:measureAllChildren="false"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:textSize="14sp"
                                android:background="@drawable/employe_circle_rounded"

                                android:fontFamily="@font/roboto_third"
                                android:paddingRight="20dp"
                                android:id="@+id/four_wheelers_id"
                                android:gravity="center"
                                android:paddingLeft="20dp"
                                android:textColor="@color/black_font"
                                android:layout_height="@dimen/filters_rounded_30sp"
                                android:text="4 Wheelers"

                                />


                        </FrameLayout>
                        <FrameLayout
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:textSize="14sp"
                                android:background="@drawable/employe_circle_rounded"
                                android:gravity="center"
                                android:id="@+id/two_wheelers_id"
                                android:fontFamily="@font/roboto_third"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:textColor="@color/black_font"
                                android:layout_height="@dimen/filters_rounded_30sp"
                                android:text="2 Wheelers"

                                />


                        </FrameLayout>


                    </LinearLayout>




                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/filter_24sp"
                    android:text="Provide Loan Facility
"
                    android:textColor="#000"

                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_third"
                    android:layout_marginRight="20dp"
                    android:textSize="16sp"

                    />
                <HorizontalScrollView
                    android:fillViewport="true"
                    android:layout_marginTop="@dimen/filter_18sp"
                    android:measureAllChildren="false"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:background="@drawable/employe_circle_rounded"
                                android:fontFamily="@font/roboto_third"
                                android:paddingRight="20dp"
                                android:paddingLeft="20dp"
                                android:id="@+id/yes_loan"
                                android:textColor="@color/black_font"
                                android:layout_height="@dimen/filters_rounded_30sp"
                                android:text="Yes"

                                />


                        </FrameLayout>
                        <FrameLayout
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:textSize="14sp"
                                android:background="@drawable/employe_circle_rounded"
                                android:gravity="center"
                                android:fontFamily="@font/roboto_third"
                                android:paddingLeft="20dp"
                                android:id="@+id/no_loan"
                                android:paddingRight="20dp"
                                android:textColor="@color/black_font"
                                android:layout_height="@dimen/filters_rounded_30sp"
                                android:text="No"

                                />


                        </FrameLayout>

                    </LinearLayout>



                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/filter_24sp"
                    android:text="Provide property registery facility

"
                    android:textColor="#000"

                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_third"
                    android:layout_marginRight="20dp"
                    android:textSize="16sp"

                    />
                <HorizontalScrollView
                    android:fillViewport="true"
                    android:layout_marginTop="@dimen/filter_18sp"
                    android:measureAllChildren="false"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
