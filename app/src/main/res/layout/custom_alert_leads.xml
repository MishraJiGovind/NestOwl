<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CUSTOM_ALERT_MAIN"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="visible"
        app:cardCornerRadius="15dp"
        app:cardElevation="06dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="05dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="05dp"
            android:layout_marginBottom="52dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="1dp">

                <TextView
                    android:id="@+id/CUSTOM_ALERT_BHK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2 BHK"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:textColor="#000"
                    android:textSize="12sp"
                    tools:singleLine="true" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10sp"
                    android:background="#A7A6A6" />

                <TextView
                    android:id="@+id/CUSTOM_ALERT_PROJECT_NAME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:text="M3M Project"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:textColor="#000"
                    android:textSize="12sp"
                    tools:singleLine="true" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10sp"
                    android:background="#A7A6A6" />

                <TextView
                    android:id="@+id/CUSTOM_ALERT_BUDGET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:text="30-40 Lac"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    tools:singleLine="true" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10sp"
                    android:background="#A7A6A6" />

                <TextView

                    android:id="@+id/CUSTOM_ALERT_SQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginLeft="12sp"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text="680 Sq.ft."
                    android:textColor="#000"
                    android:textSize="12sp"
                    tools:singleLine="true" />


            </LinearLayout>


        </FrameLayout>


        <TextView

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="47dp"
            android:background="#A7A6A6" />

        <FrameLayout
            android:id="@+id/third_card"
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="45dp"
                android:gravity="right"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/lead_unlock_alert"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/CUSTOM_ALERT_UNLOCKING"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="in 2 min"
                        android:textColor="@color/brown_color"
                        android:textSize="10sp" />


                </FrameLayout>

                <LinearLayout
                    android:id="@+id/CUSTOM_ALERT_DUBBLE_LEAD"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/lead_unlock_alert"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView95"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Double Lead"
                        android:textColor="@color/black_color"
                        android:textSize="10sp"
                        tools:textColor="@color/brown" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:layout_weight="1">

                    <FrameLayout
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="05dp"
                        android:layout_marginTop="08dp"
                        android:background="@drawable/circle_background">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="25dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="05dp"
                            android:src="@drawable/face_icon" />


                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/CUSTOM_ALERT_NAME"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="06dp"
                            android:fontFamily="@font/roboto_mediaum_second"
                            android:text="Akhil"
                            android:textColor="#000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/CUSTOM_ALERT_INTRESTED"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/second"
                            android:text="is interested to buy 2Bhk"
                            android:textColor="#000"
                            android:textSize="10sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <FrameLayout

                        android:id="@+id/CUSTOM_ALERT_DOCTOR"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/doctor_background"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="Doctor"
                            android:textColor="#000"
                            android:textSize="12sp" />

                    </FrameLayout>

                    <FrameLayout

                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/doctor_background">

                        <TextView
                            android:id="@+id/CUSTOM_ALERT_STATUS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="07dp"
                            android:layout_marginRight="07dp"
                            android:text="Buyer"
                            android:textColor="#000"
                            android:textSize="12sp" />

                    </FrameLayout>

                    <FrameLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/doctor_background"
                        android:minWidth="50dp">

                        <TextView
                            android:id="@+id/vrifiedbynest"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="07dp"
                            android:layout_marginRight="07dp"
                            android:ellipsize="marquee"
                            android:gravity="center"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:text="Verified by Nest"
                            android:textColor="#000"
                            android:textSize="12sp" />

                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>


        </FrameLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="07dp"
            android:layout_marginBottom="07dp"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/CUSTOM_ALERT_CHAT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/nest_pro_rectangle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sort_btn_font"
                        android:text="Chat"

                        android:textColor="@color/brown_color"
                        android:textSize="12sp"

                        />


                </FrameLayout>

                <FrameLayout
                    android:id="@+id/CUSTOM_ALERT_VIEW_CONTACT"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:layout_marginLeft="05dp"
                    android:layout_weight="1"
                    android:background="@drawable/nest_pro_rectangle"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:fontFamily="@font/sort_btn_font"
                        android:text="View Contact"
                        android:textColor="@color/brown_color"
                        android:textSize="12sp"

                        />


                </FrameLayout>

                <FrameLayout
                    android:id="@+id/CUSTOM_ALERT_VIEW_REQ"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="05dp"
                    android:layout_marginRight="05dp"
                    android:layout_weight="1"
                    android:background="@drawable/nest_pro_rectangle"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/CUSTOM_ALERT_EXTRA_TEXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        android:ellipsize="marquee"
                        android:fontFamily="@font/sort_btn_font"
                        android:gravity="center"

                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="View Requirement"
                        android:textColor="@color/brown_color"
                        android:textSize="12sp" />


                </FrameLayout>


            </LinearLayout>


        </HorizontalScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>