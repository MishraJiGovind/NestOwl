<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nestowl.brokerapp.ReviewActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">



                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/cross_icon"
                        android:layout_width="25dp"
                        android:id="@+id/ARTICLES_BACK"
                        android:layout_gravity="center_vertical"
                        android:layout_height="25sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:text="Review"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />



                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>


        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_marginTop="70dp"
        android:layout_marginBottom="85dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginRight="05dp"
                    android:layout_marginLeft="05dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_background"
                        android:padding="1dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="50dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/REVIEW_SUMBIT_SELLER_DP"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_marginBottom="05dp"
                                android:src="@drawable/user_icon_nest" />
                        </androidx.cardview.widget.CardView>


                    </FrameLayout>
                    <FrameLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"

                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/BUYER_REVIEWS_NAME"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ace Associates"

                            android:textColor="#000"
                            android:textSize="16sp"

                            android:textStyle="bold" />




                    </FrameLayout>


                </LinearLayout>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#A7A6A6" />
                <TextView
                    android:layout_marginRight="05dp"
                    android:layout_marginLeft="05dp"

                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    android:text="Choose a Rating:"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">


                        <RatingBar
                            android:id="@+id/REVIEW_SUMBIT_SELLER_RATING"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:numStars="5"
                            android:scaleX="0.8"
                            android:scaleY="0.8" />


                    </FrameLayout>

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:textSize="10dp"
                        android:layout_height="wrap_content"

                        android:text="Your Rating"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="140dp">

                    <androidx.cardview.widget.CardView
                        android:background="@drawable/background_search"
                        android:layout_width="match_parent"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="05dp"
                        android:layout_marginTop="03dp"
                        android:layout_marginRight="05dp"
                        android:layout_marginLeft="05dp"

                        android:layout_height="130dp">

                        <EditText
                            android:id="@+id/REVIEW_SUMBIT_SELLER_INPUT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@null"
                            android:backgroundTint="@null"
                            android:hint="Write a Review"
                            android:minHeight="48dp"
                            android:singleLine="false"
                            android:textColorHint="@color/black_light"
                            android:textSize="16sp" />



                    </androidx.cardview.widget.CardView>


                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginRight="05dp"
                    android:layout_marginLeft="05dp"

                    android:layout_marginTop="10dp"
                    android:textColor="@color/black_light"
                    android:layout_height="wrap_content"
                    android:text="Describe your experiance, please be objective, respectful,and write at least 20 words."
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="05dp"
                    android:layout_marginLeft="05dp"

                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    android:text="Upload Project Photos:"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/REVIEW_SUMBIT_SELLER_ADDD_PHOTO"
                        android:layout_width="100dp"
                        android:layout_height="85dp"
                        android:layout_marginLeft="05dp"

                        android:layout_marginTop="15dp"
                        android:layout_marginRight="05dp"
                        android:background="@drawable/background_search">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="05dp"
                            android:src="@drawable/camera_nest" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:gravity="bottom|center_horizontal|center_vertical"
                            android:text="Add"
                            android:textAlignment="gravity" />


                    </FrameLayout>

                    <ImageView
                        android:id="@+id/REVIEW_SUMBIT_SELLER_ADDD_PHOTO_PREVIEW"
                        android:layout_width="100dp"
                        android:layout_height="85dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        app:srcCompat="@drawable/default_x_x" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="05dp"
                    android:layout_marginLeft="05dp"

                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <CheckBox

                        android:id="@+id/REVIEW_SUMBIT_SELLER_CHECKBOX"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />
                    <TextView
                        android:layout_gravity="center"
                        android:textColor="#000"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I confirm that the information submitted here is true and accurate."
                        />
                </LinearLayout>



            </LinearLayout>
            <TextView

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#A7A6A6" />





        </LinearLayout>



    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/REVIEW_SUMBIT_SELLER_SUMBIT"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/brown_two"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp">


        <TextView
            android:id="@+id/id_submit_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="Submit"
            android:textColor="#fff"

            android:textSize="18sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


</FrameLayout>