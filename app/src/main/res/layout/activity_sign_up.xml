<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"

    tools:context="com.nestowl.brokerapp.SignUpActivity">
<ScrollView

    android:id="@+id/scroll"
    android:layout_weight="1"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:background="@drawable/background_login_image"
                android:fitsSystemWindows="true"


                android:focusable="true">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="165dp"
                android:background="@drawable/sign_up_design"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/roboto_bold_first"
                        android:text="Sign Up"
                        android:textColor="#000"
                        android:textSize="26sp"
                        android:textStyle="bold"

                        />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sign_up_40sp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="23dp"
                        android:background="@drawable/bacground_text">

                        <EditText
                            android:id="@+id/et_full_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:background="@null"
                            android:backgroundTint="@null"
                            android:hint="Full Name"
                            android:singleLine="true"
                            android:textColorHint="@color/color_edit_text"
                            android:textSize="@dimen/text_sign_up_16sp" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sign_up_40sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="23dp"
                        android:background="@drawable/bacground_text">

                        <EditText
                            android:id="@+id/et_email_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:background="@null"
                            android:backgroundTint="@null"
                            android:hint="Email Address"
                            android:singleLine="true"
                            android:textColorHint="@color/color_edit_text"
                            android:textSize="@dimen/text_sign_up_16sp" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="23dp"
                        android:background="@drawable/bacground_text">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <EditText
                                android:id="@+id/et_password"
                                android:layout_width="314dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:background="#00FFFFFF"
                                android:drawableRight="@drawable/ic_show"
                                android:drawableTint="@color/brown"
                                android:ems="10"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:longClickable="false" />

                        </LinearLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sign_up_40sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="23dp"
                        android:background="@drawable/bacground_text">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView88"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="0"
                                android:text="+91"
                                android:textColor="@color/black_color"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/et_mobile_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"

                                android:background="@null"
                                android:backgroundTint="@null"
                                android:hint="Mobile Number"
                                android:singleLine="true"
                                android:textColorHint="@color/color_edit_text"
                                android:textSize="@dimen/text_sign_up_16sp" />
                        </LinearLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sign_up_40sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="23dp"
                        android:background="@drawable/bacground_text">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginRight="10dp">

                            <TextView
                                android:id="@+id/sent_otp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_five"
                                android:gravity="center_vertical"
                                android:text="Send OTP"
                                android:textColor="#3F51B5"

                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_OtpTimer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_five"
                                android:gravity="center_horizontal"
                                android:text="00:00"

                                android:textAlignment="center"
                                android:textColor="@color/black_font"

                                android:textSize="14sp"
                                android:visibility="gone" />

                            <TextView

                                android:id="@+id/tv_resend_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:fontFamily="@font/roboto_five"
                                android:gravity="center"
                                android:text="@string/resend_otp"
                                android:textColor="@color/brown_color"
                                android:textSize="16sp"
                                android:visibility="gone" />

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/LOGIN_SCREEN_OTP_ONE"
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginLeft="20dp"
                                android:backgroundTint="#9E9B9B"
                                android:inputType="number"
                                android:maxLength="1"

                                />

                            <EditText
                                android:id="@+id/et_two"

                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:backgroundTint="#9E9B9B"
                                android:inputType="number"
                                android:maxLength="1"

                                />

                            <EditText
                                android:id="@+id/et_three"

                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:backgroundTint="#9E9B9B"
                                android:inputType="number"
                                android:maxLength="1"

                                />

                            <EditText
                                android:id="@+id/et_four"
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:backgroundTint="#9E9B9B"
                                android:inputType="number"
                                android:maxLength="1"

                                />

                        </LinearLayout>

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="15dp">

                        <CheckBox
                            android:id="@+id/SIGN_UP_CHECKBOX"
                            android:layout_width="27dp"
                            android:layout_height="27dp"

                            android:layout_gravity="center_vertical" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="05dp"
                                        android:gravity="start"
                                        android:text="I agree to Nestedge"
                                        android:textAlignment="viewStart"
                                        android:textColor="#000"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="start"
                                        android:text="Terms of Use and Privacy Policy "
                                        android:textAlignment="viewStart"
                                        android:textColor="@color/basic_color"
                                        android:textSize="12sp" />

                                </LinearLayout>


                                <!--

                                <TextView
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/basic_color"
                                    android:layout_marginLeft="05dp"
                                    android:textSize="12sp"
                                    android:layout_marginTop="04dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="and Privacy Policy "
                                    />
-->

                            </FrameLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_five"
                            android:text="Already Have and account?"
                            android:textColor="#000"
                            android:textSize="14sp"

                            />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">


                        <TextView
                            android:id="@+id/sign_up_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/roboto_five"
                            android:text="Log In"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold"

                            />

                    </FrameLayout>


                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/SIGNUP_BACK"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                app:srcCompat="@drawable/arrow_back_set_up"
                app:tint="@color/white" />


        </FrameLayout>


    </LinearLayout>



</ScrollView>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="30dp"
        android:visibility="visible"
        app:cardElevation="8dp"
        android:id="@+id/card"
        android:layout_marginLeft="23dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="23dp"
        app:cardBackgroundColor="@color/brown_two"
        android:layout_width="match_parent"
        android:layout_height="45dp">


        <TextView
            android:textColor="#fff"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_mediaum_second"

            android:gravity="center"

            android:id="@+id/id_continue_singup"
            android:text="Continue"

            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_all_45sp" />



    </androidx.cardview.widget.CardView>


</LinearLayout>