<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.nestowl.brokerapp.SignUpEarnMoney">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/EDIT_PROFILE_BACK"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/left_arrow" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_mediaum_second"
                            android:text="Earn More"
                            android:textColor="#fff"
                            android:textSize="20sp"

                            />


                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>


        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/earn_more"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"

        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/brown_two"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout6">


        <TextView


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_mediaum_second"
            android:text="Update"
            android:textColor="#ffff"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/frameLayout6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/earn_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout6">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/roboto_bold_first"
                    android:text="Extra offering to earn more and make our broker security proof."
                    android:textColor="#000"

                    android:textSize="20sp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:text="Serve Indian Heros
"
                    android:textColor="#000"

                    android:textSize="16sp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/second"
                    android:text="Join our Team of professional broker to serve Indian Armed forces, Doctors Police Personal at fix 0.80% service charge"
                    android:textColor="#000"

                    android:textSize="14sp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/second"
                    android:text="Brief to Join Munafa hero club"
                    android:textColor="#000"

                    android:textSize="14sp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/roboto_third"

                    android:text="Join Now Serve
"
                    android:textColor="#000"
                    android:textSize="16sp"

                    />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fillViewport="true"
                    android:measureAllChildren="false"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="20dp">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/serve_as_hero_id"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/filters_rounded_30sp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/employe_circle_rounded"
                                android:fontFamily="@font/roboto_third"
                                android:gravity="center"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:text="Serve as hero"
                                android:textColor="@color/black_font"
                                android:textSize="14sp"

                                />


                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:id="@+id/may_be_later_id"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/filters_rounded_30sp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/employe_circle_rounded"
                                android:fontFamily="@font/roboto_third"
                                android:gravity="center"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:text="May be later"
                                android:textColor="@color/black_font"
                                android:textSize="14sp"

                                />


                        </FrameLayout>

                    </LinearLayout>


                </HorizontalScrollView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/know_more"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"


                    android:layout_marginRight="@dimen/post_property_padding_20dp"
                    app:cardBackgroundColor="@color/brown_two"
                    app:cardCornerRadius="@dimen/post_property_padding_20dp">


                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_15dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@font/roboto_mediaum_second"
                        android:text="Know More"
                        android:textColor="#ffff"
                        android:textSize="18sp" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:text="Oppotunity to Double Leads
"
                    android:textColor="#000"

                    android:textSize="16sp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/second"
                    android:text="When a customer buy/sell property from you, we will offer same customer to sell/buy his/her property with your help."
                    android:textColor="#000"

                    android:textSize="14sp"

                    />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/filter_18sp"
                    android:fillViewport="true"
                    android:measureAllChildren="false"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="20dp">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/yes_i_want_to_earn"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/filters_rounded_30sp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/employe_circle_rounded"
                                android:fontFamily="@font/roboto_third"
                                android:gravity="center"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:text="Yes i want to earn more"
                                android:textColor="@color/black_font"
                                android:textSize="14sp"

                                />


                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:id="@+id/maybe_later_second"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/filters_rounded_30sp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/employe_circle_rounded"
                                android:fontFamily="@font/roboto_third"
                                android:gravity="center"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:text="May be later"
                                android:textColor="@color/black_font"
                                android:textSize="14sp"

                                />


                        </FrameLayout>

                    </LinearLayout>


                </HorizontalScrollView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/know_more_double_leads"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"


                    android:layout_marginRight="@dimen/post_property_padding_20dp"
                    app:cardBackgroundColor="@color/brown_two"
                    app:cardCornerRadius="@dimen/post_property_padding_20dp">


                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_15dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@font/roboto_mediaum_second"
                        android:text="Know More"
                        android:textColor="#ffff"
                        android:textSize="18sp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </ScrollView>


    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>