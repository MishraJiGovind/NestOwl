<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/CUSTOM_MY_PRO_CARD"
        android:layout_width="match_parent"


        android:layout_height="260dp"
        android:background="@drawable/nest_card_back"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout

            android:id="@+id/CUSTOM_MY_PRO_IMG"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/top_image"
            android:fitsSystemWindows="true">


            <ImageView
                android:id="@+id/three_dots_second"
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|center_horizontal"
                android:src="@drawable/three_dots"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/premium_back">

                <TextView
                    android:id="@+id/CUSTOM_MY_PRO_LIVE_TO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Live to Public"
                    android:textColor="#000"

                    android:textSize="10sp"
                    android:textStyle="bold" />


            </FrameLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/premium_back">

            <TextView
                android:id="@+id/CUSTOM_MY_PRO_FEATUERD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Featured"
                android:textColor="#000"

                android:textSize="10sp"
                android:textStyle="bold" />


        </FrameLayout>

        <ImageView
            android:id="@+id/CUSTOM_MY_PRO_FEV"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/heart_icon_black_trans"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="135dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/CUSTOM_MY_PRO_PRICE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:text="â‚¹ 27 Lakh, 3BHK Home"
                    android:textColor="#000"


                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/CUSTOM_MY_PRO_ADDRESS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="07dp"
                    android:fontFamily="@font/roboto_third"
                    android:maxWidth="180dp"
                    android:text="Tata Housing Society"

                    android:textColor="#000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/CUSTOM_MY_PRO_LOCALITY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="02dp"
                    android:fontFamily="@font/roboto_third"
                    android:maxWidth="150dp"

                    android:text="Sector-112,Gurgaon"

                    android:textColor="#000"
                    android:textSize="12sp" />


            </LinearLayout>

            <FrameLayout
                android:id="@+id/CUSTOM_MY_PRO_MANNAGE"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="end|bottom"

                android:layout_marginRight="8dp"
                android:layout_marginBottom="45dp"
                android:background="@drawable/deal_closed_back">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:text="Manage Property"
                    android:textColor="@color/whit_button"
                    android:textSize="14sp" />


            </FrameLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="06dp">


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ready_to_move_rounded_background">

                    <TextView
                        android:id="@+id/CUSTOM_MY_PRO_READY"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="07dp"
                        android:layout_marginRight="07dp"
                        android:gravity="center"

                        android:text="Ready to move"
                        android:textColor="#000"
                        android:textSize="12sp" />


                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="05dp"
                    android:layout_weight="1"
                    android:background="@drawable/ready_to_move_rounded_background">

                    <TextView
                        android:id="@+id/CUSTOM_MY_PRO_RESALE"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="07dp"
                        android:layout_marginRight="07dp"
                        android:gravity="center"
                        android:text="Resale"

                        android:textColor="#000"
                        android:textSize="12sp" />


                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="05dp"
                    android:layout_weight="1"
                    android:background="@drawable/ready_to_move_rounded_background">

                    <TextView
                        android:id="@+id/CUSTOM_MY_PRO_SQ"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="07dp"
                        android:layout_marginRight="07dp"
                        android:gravity="center"
                        android:text="500 SQ, FT,"

                        android:textColor="#000"
                        android:textSize="12sp" />


                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="05dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/ready_to_move_rounded_background">

                    <TextView
                        android:id="@+id/CUSTOM_MY_PRO_OWNER"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="08dp"
                        android:layout_marginRight="08dp"
                        android:gravity="center"
                        android:text="Owner"

                        android:textColor="#000"
                        android:textSize="12sp" />


                </FrameLayout>


            </LinearLayout>


        </FrameLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>