<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/nest_card_back"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/CUSTOM_NESTPRO_SEARCH_DP"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom|center_horizontal"
                        android:scaleType="fitXY"
                        android:src="@drawable/face_icon_two"
                        app:srcCompat="@drawable/ic_user" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="05dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/CUSTOM_NESTPRO_SEARCH_NAME"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_mediaum_second"
                        android:text="Rajesh Singh"

                        android:textColor="#000"

                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/CUSTOM_NESTPRO_SEARCH_ADDRESS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/second"
                        android:text="Sector 23, Noida"
                        android:textColor="@color/black_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/CUSTOM_NESTPRO_SEARCH_MOTO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/second"
                        android:text="Deals in- Residential, Commercial other"
                        android:textColor="@color/black_color"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/CUSTOM_NESTPRO_SEARCH_EXTRA_TEXT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:fontFamily="@font/second"
                    android:maxLines="2"
                    android:padding="10dp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipscing elit.Name handrict..."
                    android:textColor="@color/black_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:background="#A7A6A6" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:fillViewport="true"
                android:measureAllChildren="false"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/CUSTOM_NESTPRO_SEARCH_CHAT_CLICK"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/contact_builder">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/sort_btn_font"
                            android:text="Chat"

                            android:textColor="#fff"
                            android:textSize="12sp"

                            />


                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/CUSTOM_NESTPRO_SEARCH_VIEW_CONTACT"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_marginLeft="05dp"
                        android:layout_weight="1"
                        android:background="@drawable/nest_pro_rectangle">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"


                            android:fontFamily="@font/sort_btn_font"
                            android:text="View Contact"
                            android:textColor="@color/brown_color"
                            android:textSize="12sp"

                            />


                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/CUSTOM_NESTPRO_SEARCH_VIEW_PROFILE"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/nest_pro_rectangle">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:fontFamily="@font/sort_btn_font"
                            android:text="View Profile"
                            android:textColor="@color/brown_color"
                            android:textSize="12sp"

                            />


                    </FrameLayout>


                </LinearLayout>


            </HorizontalScrollView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>