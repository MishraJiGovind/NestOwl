<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nestowl.brokerapp.ArmyFormSecondStep">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <FrameLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/left_arrow"
                        android:layout_width="18dp"
                        android:id="@+id/ARTICLES_BACK"
                        android:layout_gravity="center_vertical"
                        android:layout_height="18dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:text="Indian Heros"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />




                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>


        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>
    <androidx.cardview.widget.CardView

        app:cardCornerRadius="30dp"
        android:layout_gravity="bottom"
        android:id="@+id/continue_form"
        android:layout_marginRight="@dimen/screen_sixteen_16sp"

        app:cardElevation="8dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="@dimen/screen_sixteen_16sp"
        app:cardBackgroundColor="@color/brown_two"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="50dp">



        <TextView
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="16sp"

            android:id="@+id/tv_next_make_offer"
            android:layout_marginBottom="@dimen/dimen_bottom_10sp"
            android:text="Submit"
            android:fontFamily="@font/first"


            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45sp" />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_marginBottom="65dp"
        android:layout_marginTop="65dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/screen_sixteen_16sp"
            android:layout_marginLeft="@dimen/screen_sixteen_16sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_mediaum_second"
                android:layout_marginTop="30dp"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:text="Work Since"
                />

            <LinearLayout
                android:layout_marginTop="10dp"

                android:orientation="horizontal"

                android:layout_width="match_parent"
                android:layout_height="50dp">
                <FrameLayout
                    android:layout_gravity="center_vertical"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <EditText
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@null"
                        android:background="@null"
                        android:hint="mm/dd/yy"
                        android:textColorHint="@color/color_edit_text"

                        android:fontFamily="@font/second"
                        android:layout_marginRight="20dp"
                        android:textSize="16sp"

                        />

                    <ImageView
                        android:layout_gravity="end"
                        android:src="@drawable/calendar_nest"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="30dp"
                        android:background="#D8D6D6" />


                </FrameLayout>

            </LinearLayout>





            <TextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/first"
                android:layout_marginTop="30dp"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:text="Please Upload Photo of Official in official dress"
                />
            <LinearLayout
                android:layout_marginTop="26dp"
                android:layout_width="match_parent"
                android:layout_height="130dp">


                <FrameLayout
                    android:background="@drawable/verify_background"
                    android:layout_marginRight="6dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="55dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_menu_gallery"
                        android:layout_height="55dp" />
                    <TextView
                        android:textSize="12sp"
                        android:layout_gravity="center_horizontal|center"
                        android:textColor="@color/black_color"
                        android:layout_marginTop="40dp"
                        android:visibility="gone"
                        android:fontFamily="@font/roboto_mediaum_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select from Gallary"

                        />


                </FrameLayout>

                <FrameLayout
                    android:background="@drawable/verify_background"

                    android:layout_marginLeft="6dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="55dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_menu_gallery"
                        android:layout_height="55dp" />
                    <TextView
                        android:textSize="12sp"
                        android:layout_gravity="center_horizontal|center"
                        android:textColor="@color/black_color"
                        android:layout_marginTop="40dp"
                        android:visibility="gone"
                        android:fontFamily="@font/roboto_mediaum_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Take a Picture"

                        />



                </FrameLayout>



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_marginTop="05dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <FrameLayout
                    android:layout_marginRight="06dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/verify_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_gravity="center"
                        android:fontFamily="@font/second"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Passport Photo"

                        />


                </FrameLayout>
                <FrameLayout
                    android:layout_marginLeft="06dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/verify_background"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_gravity="center"
                        android:fontFamily="@font/second"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Dress Photo"

                        />


                </FrameLayout>


            </LinearLayout>




            <TextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/first"
                android:layout_marginTop="30dp"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:text="Please Upload service id"
                />
            <LinearLayout
                android:layout_marginTop="26dp"
                android:layout_width="match_parent"
                android:layout_height="130dp">


                <FrameLayout
                    android:background="@drawable/verify_background"
                    android:layout_marginRight="6dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="55dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_menu_gallery"
                        android:layout_height="55dp" />
                    <TextView
                        android:textSize="12sp"
                        android:layout_gravity="center_horizontal|center"
                        android:textColor="@color/black_color"
                        android:layout_marginTop="40dp"
                        android:visibility="gone"
                        android:fontFamily="@font/roboto_mediaum_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select from Gallary"

                        />


                </FrameLayout>

                <FrameLayout
                    android:visibility="invisible"
                    android:background="@drawable/verify_background"

                    android:layout_marginLeft="6dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="55dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_menu_gallery"
                        android:layout_height="55dp" />
                    <TextView
                        android:textSize="12sp"
                        android:layout_gravity="center_horizontal|center"
                        android:textColor="@color/black_color"
                        android:layout_marginTop="40dp"
                        android:visibility="gone"
                        android:fontFamily="@font/roboto_mediaum_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Take a Picture"

                        />



                </FrameLayout>



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_marginTop="05dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <FrameLayout
                    android:layout_marginRight="06dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/verify_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_gravity="center"
                        android:fontFamily="@font/second"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload Photo"

                        />


                </FrameLayout>
                <FrameLayout
                    android:layout_marginLeft="06dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/verify_background"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_gravity="center"
                        android:fontFamily="@font/second"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload Photo"

                        />


                </FrameLayout>


            </LinearLayout>


        </LinearLayout>



    </ScrollView>



</FrameLayout>