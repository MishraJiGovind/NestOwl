<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.newprojectr.com.nestowl.newprojectr.SignUpEditScreen">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <FrameLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <ImageView
                    android:id="@+id/EDIT_PROFILE_Ok"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/ic_check_black_24dp" />
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/EDIT_PROFILE_BACK"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:padding="15dp"
                        android:src="@drawable/left_arrow" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        >





                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:text="Edit"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />


            </FrameLayout>


        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/EDIT_PROFILE_EDIT_PHOTO"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/EDIT_PROFILE_DP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/profile_img_sahil" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/edit_sort" />

    </FrameLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/post_property_padding_20dp"
        android:layout_marginRight="@dimen/post_property_padding_20dp"

        android:layout_marginTop="@dimen/filter_18sp"

        android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="50dp">
        <FrameLayout
            android:layout_gravity="center_vertical"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/EDIT_PROFILE_FIRST_NAME"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:backgroundTint="@null"

                android:fontFamily="@font/second"
                android:hint="First Name"
                android:singleLine="true"

                android:textColorHint="@color/color_edit_text"
                android:textSize="16sp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:background="#D8D6D6" />


        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/post_property_padding_20dp"
        android:layout_marginRight="@dimen/post_property_padding_20dp"

        android:layout_marginTop="@dimen/filter_18sp"

        android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="50dp">
        <FrameLayout
            android:layout_gravity="center_vertical"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/EDIT_PROFILE_LAST_NAME"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:backgroundTint="@null"

                android:fontFamily="@font/second"
                android:hint="Last Name"
                android:singleLine="true"

                android:textColorHint="@color/color_edit_text"
                android:textSize="16sp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:background="#D8D6D6" />


        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/post_property_padding_20dp"
        android:layout_marginRight="@dimen/post_property_padding_20dp"

        android:layout_marginTop="@dimen/filter_18sp"

        android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="50dp">
        <FrameLayout
            android:layout_gravity="center_vertical"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/EDIT_PROFILE_EMAIL"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:backgroundTint="@null"

                android:fontFamily="@font/second"
                android:hint="Email"
                android:singleLine="true"

                android:textColorHint="@color/color_edit_text"
                android:textSize="16sp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:background="#D8D6D6" />


        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/post_property_padding_20dp"
        android:layout_marginRight="@dimen/post_property_padding_20dp"

        android:layout_marginTop="@dimen/filter_18sp"

        android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="50dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/EDIT_PROFILE_PHONE_OTP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="SEND OTP"
                android:textColor="@color/basic_color"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/EDIT_PROFILE_PHONE"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@null"

                android:backgroundTint="@null"
                android:fontFamily="@font/second"
                android:hint="Phone No"

                android:singleLine="true"
                android:textColorHint="@color/color_edit_text"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/EDIT_PROFILE_PHONE_OTP"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#D8D6D6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/EDIT_PROFILE_PHONE" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginLeft="@dimen/post_property_padding_20dp"

        android:layout_marginTop="@dimen/filter_18sp"

        android:layout_marginRight="@dimen/post_property_padding_20dp"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <LinearLayout
                android:id="@+id/EDIT_PROFILE_OTP_INPUTS"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/EDIT_PROFILE_OTP_A"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/EDIT_PROFILE_OTP_B"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/EDIT_PROFILE_OTP_C"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/EDIT_PROFILE_OTP_D"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:maxLength="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/EDIT_PROFILE_OTP_VARIFY_OTP"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0"
                android:background="@drawable/employe_circle_rounded"
                android:gravity="center"
                android:padding="10dp"
                android:text="Verify Otp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/EDIT_PROFILE_OTP_INPUTS" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/EDIT_PROFILE_UPDATE_PASSWORD_MAIN"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/EDIT_PROFILE_PASSWORD_ONE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:ems="10"
                    android:hint="Enter new password"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/color_edit_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:fontFamily="@font/second" />

                <TextView
                    android:id="@+id/textView61"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#D8D6D6"
                    app:layout_constraintEnd_toEndOf="@id/EDIT_PROFILE_PASSWORD_ONE"
                    app:layout_constraintStart_toStartOf="@id/EDIT_PROFILE_PASSWORD_ONE"
                    app:layout_constraintTop_toBottomOf="@id/EDIT_PROFILE_PASSWORD_ONE" />

                <EditText
                    android:id="@+id/EDIT_PROFILE_PASSWORD_TWO"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="#00FFFFFF"
                    android:ems="10"
                    android:hint="Confirm new password"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/color_edit_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView61"
                    tools:fontFamily="@font/second"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/textView62"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#D8D6D6"
                    app:layout_constraintEnd_toEndOf="@id/EDIT_PROFILE_PASSWORD_TWO"
                    app:layout_constraintStart_toStartOf="@id/EDIT_PROFILE_PASSWORD_TWO"
                    app:layout_constraintTop_toBottomOf="@+id/EDIT_PROFILE_PASSWORD_TWO" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/EDIT_PROFILE_OTP_UPDATE_PASSWORD"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/employe_circle_rounded"
                android:gravity="center"
                android:padding="8dp"
                android:text="Update Password"
                android:textColor="@color/black_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/EDIT_PROFILE_UPDATE_PASSWORD_MAIN" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/EDIT_PROFILE_SUMBIT"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/brown"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <TextView
            android:id="@+id/textView59"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Update"
            android:textColor="@color/whit_button"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>


</LinearLayout>
