<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">





    <FrameLayout
        android:layout_marginTop="15dp"
        android:background="@drawable/filter_background"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


<ScrollView
    android:scrollbars="vertical"
    android:id="@+id/scroll_property_details_explore_more"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView

                android:layout_width="47dp"
                android:layout_height="4dp"
                android:layout_marginTop="02dp"
                android:layout_gravity="center_horizontal"
                android:background="#929191" />




            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:text="Property Details"
                    android:textColor="#8A8888"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"

                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/close_icon_multipul" />


            </FrameLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="#E6E0E0" />




            <LinearLayout

                android:layout_marginLeft="@dimen/home_screen_two_20dp"
                android:layout_marginTop="05dp"
                android:layout_marginRight="@dimen/screen_sixteen_16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Over Looking"
                        android:textSize="12sp"
                        android:layout_marginTop="02dp"
                        android:fontFamily="@font/second"
                        android:textColor="@color/black_light"
                        android:layout_height="wrap_content"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="No.of sides open"
                        android:textSize="12sp"
                        android:fontFamily="@font/second"
                        android:layout_marginTop="10dp"
                        android:textColor="#0F0000"
                        android:layout_height="wrap_content"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/second"
                        android:text="Furnishing"
                        android:textColor="#000"

                        android:textSize="12sp"

                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="25dp">

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:text="Area"
                            android:textSize="12sp"
                            android:fontFamily="@font/second"
                            android:textColor="#000"
                            android:layout_height="wrap_content"

                            />

                    </LinearLayout>




                </LinearLayout>


                <LinearLayout
                    android:layout_marginLeft="80dp"

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="East"
                        android:textSize="12sp"
                        android:fontFamily="@font/third"

                        android:layout_marginTop="02dp"
                        android:textColor="#000"
                        android:layout_height="wrap_content"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="2"
                        android:textSize="12sp"
                        android:fontFamily="@font/third"
                        android:layout_marginTop="10dp"
                        android:textColor="#000"
                        android:layout_height="wrap_content"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Un-Furnished"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000"
                        android:fontFamily="@font/third"

                        android:layout_height="wrap_content"

                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:text="1250.Sq.ft"
                        android:textSize="12sp"
                        android:fontFamily="@font/third"
                        android:textColor="#000"
                        android:layout_height="wrap_content"

                        />





                </LinearLayout>


            </LinearLayout>




            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#E6E0E0" />




            <androidx.cardview.widget.CardView

                android:layout_marginTop="25dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="@dimen/home_screen_two_20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                app:cardBackgroundColor="@color/brown_two"
                android:layout_width="match_parent"
                android:layout_height="50dp">


                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:textColor="#ffff"
                    android:text="Submit"
                    />

            </androidx.cardview.widget.CardView>



        </LinearLayout>



    </LinearLayout>


</ScrollView>



    </FrameLayout>


</LinearLayout>