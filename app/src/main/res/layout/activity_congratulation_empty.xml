<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.nestowl.brokerapp.CongratulationEmpty">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_gravity="bottom"
                    android:background="@color/line_color"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />



                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView

                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_arrow_backs_black_24dp"
                        android:layout_width="27dp"
                        android:id="@+id/iv46"
                        android:layout_gravity="center_vertical"
                        android:layout_height="27dp" />

                </LinearLayout>

            </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/roboto_bold_first"
        android:text="Congratulation!"
        android:textColor="#000"

        android:textSize="28sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Property has been posted succesfully."
        android:layout_marginTop="15dp"
        android:textColor="#000"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/second"
        android:textSize="15sp"

        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/congratulation_background_first">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/second"
                    android:text="ID:"
                    android:textColor="#000"
                    android:textSize="14sp"

                    />

                <TextView
                    android:id="@+id/POST_PROPERTY_CONGO_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="05dp"
                    android:fontFamily="@font/roboto_third"
                    android:text="53033055"
                    android:textColor="#000"

                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:fontFamily="@font/second"
                    android:text="Expire on:"
                    android:textColor="#000"
                    android:textSize="14sp"

                    />

                <TextView
                    android:id="@+id/POST_PROPERTY_CONGO_EXPIRE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="05dp"
                    android:fontFamily="@font/roboto_third"
                    android:text="Jan 24,21"
                    android:textColor="#000"

                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/second"
                    android:text="Status:"
                    android:textColor="#000"
                    android:textSize="14sp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="05dp"
                    android:fontFamily="@font/roboto_third"
                    android:text="Under screening,will be live in 24 hours."
                    android:textColor="#000"
                    android:textSize="14sp"

                    />


            </LinearLayout>


        </FrameLayout>

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="105dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/congratulation_second_background">

            <LinearLayout
                android:id="@+id/POST_PROPERTY_CONGO_PRIVIEW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/edt_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="05dp"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:text="Preview your property"
                    android:textColor="#000"
                    android:textSize="14sp"

                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/POST_PROPERTY_CONGO_EDIT"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/edt_icon" />

                <TextView
                    android:id="@+id/edit_your_ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="05dp"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:text="Edit your Ad"
                    android:textColor="#000"
                    android:textSize="14sp"

                    />


            </LinearLayout>

        </FrameLayout>


    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/POST_PRO_CONGO_HOME"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/brown"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <TextView
            android:id="@+id/textView60"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Go to Home Screen"
            android:textColor="@color/whit_button"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>


</LinearLayout>