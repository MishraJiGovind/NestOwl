<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.nestowl.Fragment.LeadFragment">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_horizontal_36dp"
        android:layout_marginTop="10dp"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"

            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <FrameLayout
                android:id="@+id/ALERT_LEADS_WORK_LOCATION"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/nest_pro_rectangle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:text="Work Location"
                    android:textColor="@color/black_color"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="07dp"
                    android:src="@drawable/arrow_down_filter" />


            </FrameLayout>

            <FrameLayout

                android:id="@+id/ALERT_LEADS_STATUS"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="05dp"
                android:background="@drawable/nest_pro_rectangle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="25dp"
                    android:background="@null"
                    android:backgroundTint="@null"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:text="Proposal Status"

                    android:textColor="@color/black_color"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="07dp"
                    android:src="@drawable/arrow_down_filter" />


            </FrameLayout>


            <FrameLayout
                android:id="@+id/ALERT_LEADS_TYPE"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="05dp"
                android:background="@drawable/nest_pro_rectangle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:text="Lead Type"
                    android:textColor="@color/black_color"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="07dp"
                    android:src="@drawable/arrow_down_filter" />


            </FrameLayout>

            <FrameLayout

                android:id="@+id/ALERT_LEADS_TIME"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="05dp"
                android:background="@drawable/nest_pro_rectangle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="25dp"
                    android:background="@null"
                    android:backgroundTint="@null"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:text="Time"

                    android:textColor="@color/black_color"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="07dp"
                    android:src="@drawable/arrow_down_filter" />


            </FrameLayout>


        </LinearLayout>


    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ALL_NO_DATA_SHOW"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="144dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/alert" />

        <TextView
            android:id="@+id/textView58"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Oops! No leads found."
            android:textAlignment="center"
            android:textColor="@color/brown"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <androidx.cardview.widget.CardView
            android:id="@+id/ALL_NO_DATA_SHOW_BTN"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/brown_color"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView58">

            <TextView
                android:id="@+id/textView63"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Post Property"
                android:textColor="@color/whit_button"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="10dp"

        android:layout_marginBottom="65dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ALERT_LEADS_PUBLIC_RECYLER"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ALERT_LEADS_INDIAN_HEROS_RECYCLER"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ALERT_LEADS_DUBBLE_RECYCLER"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ALERT_LEADS_PROJECT_RECYCLER"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>







</LinearLayout>
