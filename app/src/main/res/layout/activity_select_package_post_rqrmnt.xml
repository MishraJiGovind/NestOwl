<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.nestowl.brokerapp.SelectPackagePostRqrmnt">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <FrameLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="55dp">



                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/left_arrow"
                        android:layout_width="18sp"
                        android:id="@+id/ARTICLES_BACK"
                        android:layout_gravity="center_vertical"
                        android:layout_height="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:text="Select Package"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />




                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>


        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/post_property_padding_20dp"
        android:layout_marginLeft="@dimen/post_property_padding_20dp"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="22sp"
            android:textColor="#000"
            android:fontFamily="@font/roboto_bold_first"
            android:text="Select a listing package to post property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:paddingTop="15dp"
            android:id="@+id/frame_select_package_post"
            android:paddingLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shadow_home_page"
            android:layout_width="match_parent"
            android:layout_height="105dp">
            <ImageView
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="end|bottom"
                android:layout_width="25dp"
                android:src="@drawable/arrow_right"
                android:layout_height="25dp" />



            <TextView
                android:textSize="18sp"
                android:textColor="#000"
                android:fontFamily="@font/roboto_mediaum_second"
                android:text="Select Package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/second"
                android:text="1 Standard Listing-Free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </FrameLayout>
        <FrameLayout
            android:paddingTop="15dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="30dp"
            android:id="@+id/frame_premiumm"
            android:background="@drawable/shadow_home_page"
            android:layout_width="match_parent"
            android:layout_height="105dp">
            <ImageView
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="end|bottom"
                android:layout_width="25dp"
                android:src="@drawable/arrow_right"
                android:layout_height="25dp" />




            <TextView
                android:textSize="18sp"
                android:textColor="#000"
                android:fontFamily="@font/roboto_mediaum_second"
                android:text="Select Package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/second"
                android:text="2 Standard Listing-Premium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </FrameLayout>
        <FrameLayout
            android:paddingTop="15dp"
            android:paddingLeft="10dp"
            android:id="@+id/editing_open"
            android:layout_marginTop="30dp"
            android:background="@drawable/shadow_home_page"
            android:layout_width="match_parent"
            android:layout_height="105dp">
            <ImageView
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="end|bottom"
                android:layout_width="25dp"
                android:src="@drawable/arrow_right"
                android:layout_height="25dp" />




            <TextView
                android:textSize="18sp"
                android:textColor="#000"
                android:fontFamily="@font/roboto_mediaum_second"
                android:text="Select Package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/second"
                android:text="3 Standard Listing-Standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </FrameLayout>






    </LinearLayout>



</LinearLayout>