                            android:layout_height="match_parent"
                            android:background="@drawable/proposal_status">

                            <TextView
                                android:id="@+id/tv_select_by_project"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="05dp"
                                android:fontFamily="@font/roboto_third"
                                android:text="Select by Project"

                                android:textColor="@color/black_font"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/montyly_dropdown"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="end|center_vertical"
                                android:src="@drawable/down_arrow_personal" />


                        </FrameLayout>


                    </LinearLayout>


                </HorizontalScrollView>

                <LinearLayout
                    android:id="@+id/lnd_amenties"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
