                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="@dimen/filter_24sp"
                        android:layout_marginRight="20dp"

                        android:fontFamily="@font/roboto_third"
                        android:text="Amenties*"
                        android:textColor="#000"

                        android:textSize="16sp"

                        />


                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fillViewport="true"
                        android:measureAllChildren="false"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/filter_padding_20sp"
                            android:paddingRight="@dimen/filter_padding_20sp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/fridge_id"
                                        android:layout_width="wrap_content"
                                        android:layout_height="43dp"
                                        android:background="@drawable/employe_circle_rounded"
                                        android:fontFamily="@font/roboto_third"
                                        android:gravity="center"
                                        android:paddingLeft="15dp"
                                        android:paddingRight="15dp"
                                        android:text="Fridge"
                                        android:textColor="@color/black_font"
                                        android:textSize="14sp"

                                        />


                                </FrameLayout>


                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp">

                                    <TextView
                                        android:id="@+id/microwave_id"
                                        android:layout_width="wrap_content"
                                        android:layout_height="43dp"
                                        android:background="@drawable/employe_circle_rounded"
                                        android:fontFamily="@font/roboto_third"
                                        android:gravity="center"
                                        android:paddingLeft="15dp"

                                        android:paddingRight="15dp"
                                        android:text="Microwave"
                                        android:textColor="@color/black_font"
                                        android:textSize="14sp"

                                        />


                                </FrameLayout>


                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/employe_circle_rounded">

                                    <TextView
                                        android:id="@+id/exhuast_fan_id"
                                        android:layout_width="wrap_content"
                                        android:layout_height="43dp"
                                        android:fontFamily="@font/roboto_third"
                                        android:gravity="center"
                                        android:paddingLeft="15dp"

                                        android:paddingRight="15dp"
                                        android:text="Exhuast fan"
                                        android:textColor="@color/black_font"
                                        android:textSize="14sp"

                                        />


                                </FrameLayout>


                            </LinearLayout>


                        </LinearLayout>


                    </HorizontalScrollView>


                </LinearLayout>

                <TextView
                    android:id="@+id/show_all_amenties_post_property"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"

                    android:fontFamily="@font/roboto_third"
                    android:text="Show all"
                    android:textColor="@color/brown_color"

                    android:textSize="14sp"


                    />


                <LinearLayout
                    android:id="@+id/luu_amenties"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="@dimen/filter_24sp"
                        android:layout_marginRight="20dp"

                        android:fontFamily="@font/roboto_third"
                        android:text="Property Features*"
                        android:textColor="#000"

                        android:textSize="16sp"

                        />


                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fillViewport="true"
                        android:measureAllChildren="false"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/filter_padding_20sp"
                            android:paddingRight="@dimen/filter_padding_20sp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <TextView
                                        android:id="@+id/tv_swiming_pool"
                                        android:layout_width="wrap_content"
                                        android:layout_height="43dp"
                                        android:layout_gravity="center"

                                        android:background="@drawable/employe_circle_rounded"
                                        android:fontFamily="@font/roboto_third"
                                        android:gravity="center"
                                        android:paddingLeft="05dp"

                                        android:paddingRight="05dp"
                                        android:text="Swiming Pool"
                                        android:textColor="@color/black_font"
                                        android:textSize="14sp"

                                        />


                                </FrameLayout>


                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1">

                                    <TextView
                                        android:id="@+id/tv_jacuzzi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="43dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/employe_circle_rounded"
                                        android:fontFamily="@font/roboto_third"
                                        android:gravity="center"
                                        android:paddingLeft="20dp"
                                        android:paddingRight="20dp"
                                        android:text="Jacuzzi"
                                        android:textColor="@color/black_font"
                                        android:textSize="14sp"

                                        />


                                </FrameLayout>


                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1">

                                    <TextView
                                        android:id="@+id/tv_fire_alarm"
                                        android:layout_width="wrap_content"
                                        android:layout_height="43dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/employe_circle_rounded"
                                        android:fontFamily="@font/roboto_third"
                                        android:gravity="center"
                                        android:paddingLeft="15dp"

                                        android:paddingRight="15dp"
                                        android:text="Fire Alarm"
                                        android:textColor="@color/black_font"
                                        android:textSize="14sp"

                                        />


                                </FrameLayout>


                            </LinearLayout>


                        </LinearLayout>


                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/show_all_property_features_post_property"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"

                        android:fontFamily="@font/roboto_third"
                        android:text="Show all"
                        android:textColor="@color/brown_color"

                        android:textSize="14sp"

                        />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/filter_24sp"
                    android:layout_marginRight="20dp"

                    android:fontFamily="@font/roboto_third"
                    android:text="Society Building USP*"
                    android:textColor="#000"

                    android:textSize="16sp"

                    />


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fillViewport="true"
                    android:measureAllChildren="false"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/filter_padding_20sp"
                        android:paddingRight="@dimen/filter_padding_20sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/security_staff_id"

                                    android:layout_width="wrap_content"
                                    android:layout_height="43dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/employe_circle_rounded"
                                    android:fontFamily="@font/roboto_third"
                                    android:gravity="center"
                                    android:paddingLeft="15dp"

                                    android:paddingRight="15dp"
                                    android:text="Security Staff"
                                    android:textColor="@color/black_font"
                                    android:textSize="14sp"

                                    />


                            </FrameLayout>


                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/visitor_parking_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="43dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/employe_circle_rounded"
                                    android:fontFamily="@font/roboto_third"
                                    android:gravity="center"
                                    android:paddingLeft="07dp"

                                    android:paddingRight="07dp"
                                    android:text="Visitor Parking"
                                    android:textColor="@color/black_font"
                                    android:textSize="14sp"

                                    />


                            </FrameLayout>


                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/club_house_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="43dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/employe_circle_rounded"

                                    android:fontFamily="@font/roboto_third"
                                    android:gravity="center"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="15dp"
                                    android:text="Club House"
                                    android:textColor="@color/black_font"
                                    android:textSize="14sp"

                                    />


                            </FrameLayout>


                        </LinearLayout>


                    </LinearLayout>


                </HorizontalScrollView>

                <TextView
                    android:id="@+id/show_all_society_building_usp_post_property"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"

                    android:fontFamily="@font/roboto_third"
                    android:text="Show all"
                    android:textColor="@color/brown_color"

                    android:textSize="14sp"

                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/filter_24sp"
                    android:layout_marginRight="20dp"

                    android:fontFamily="@font/roboto_third"
                    android:text="Other Features*"
                    android:textColor="#000"
                    android:textSize="16sp"

                    />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/filter_18sp"
                    android:fillViewport="true"
                    android:measureAllChildren="false"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/in_gated_society"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/filters_rounded_30sp"

                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/employe_circle_rounded"
                                android:fontFamily="@font/roboto_third"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="In a Gated Society"
                                android:textColor="@color/black_font"
                                android:textSize="14sp"

                                />


                        </FrameLayout>


                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/corner_property_id"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/filters_rounded_30sp"
                                android:layout_gravity="center_vertical"

                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/employe_circle_rounded"
                                android:fontFamily="@font/roboto_third"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="Corner Property"
                                android:textColor="@color/black_font"
                                android:textSize="14sp"

                                />


                        </FrameLayout>


                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/wheelchare_id"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/filters_rounded_30sp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="05dp"
                                android:layout_marginRight="05dp"
                                android:background="@drawable/employe_circle_rounded"
                                android:fontFamily="@font/roboto_third"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"

                                android:text="Wheelchair Friendly"
                                android:textColor="@color/black_font"
                                android:textSize="14sp"

                                />


                        </FrameLayout>


                    </LinearLayout>


                </HorizontalScrollView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/filter_24sp"
                    android:layout_marginRight="20dp"

                    android:fontFamily="@font/roboto_third"
                    android:text="Near by Facilities*"
                    android:textColor="#000"

                    android:textSize="16sp"

                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"

                    android:orientation="horizontal"

                    android:paddingLeft="@dimen/post_property_padding_20dp"
                    android:paddingRight="@dimen/post_property_padding_20dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"

                            android:layout_height="50dp"

                            android:layout_marginTop="10dp"

                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_gravity="center_vertical"
                                android:layout_weight="1">


                                <EditText
                                    android:id="@+id/metro_railway_edt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
