<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:layout_width="28dp"
            android:layout_marginLeft="@dimen/screen_sixteen_16sp"
            android:id="@+id/ARTICLES_BACK"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_back_set_up"
            android:layout_height="28dp" />
        <TextView
            android:layout_marginLeft="58dp"
            android:textSize="22sp"
            android:fontFamily="@font/roboto_third"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 BHK Home"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/totaltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btnback"
            android:fontFamily="@font/third"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/totaldistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/third"
            android:textColor="@android:color/black" />


        <FrameLayout
            android:layout_marginRight="20dp"
            android:background="@drawable/apply_background"
            android:layout_width="105dp"
            android:layout_gravity="end|center_vertical"

            android:layout_height="36dp">
            <TextView
                android:layout_gravity="center"
                android:textSize="14sp"
                android:fontFamily="@font/sort_btn_font"
                android:id="@+id/tv_view_profile"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"

                />

        </FrameLayout>

    </FrameLayout>



</RelativeLayout>