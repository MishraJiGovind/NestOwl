                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="05dp"
                        android:fontFamily="@font/roboto_mediaum_second"
                        android:textColor="#000"
                        android:textSize="14sp"

                        android:text="Deal Closed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />



                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:fontFamily="@font/roboto_mediaum_second"
                        android:textColor="#000"
                        android:id="@+id/frame_deal_closed"
                        android:textSize="14sp"
                        android:text="Yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />
                </LinearLayout>
            </FrameLayout>


        </FrameLayout>



    </LinearLayout>


</LinearLayout>
