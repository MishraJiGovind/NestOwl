<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@drawable/filter_background"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginTop="15dp"

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="@dimen/home_screen_two_20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#8A8888"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Manage Property"
                    />
                <ImageView
                    android:id="@+id/ivg1"
                    android:src="@drawable/close_icon_search"
                    android:layout_width="@dimen/icon_dialog_padding1_5dp"

                    android:layout_gravity="end|center_vertical"
                    android:layout_height="@dimen/icon_dialog_padding1_5dp" />


            </FrameLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#DDD4D4" />

            <androidx.cardview.widget.CardView
                android:id="@+id/CUSTOM_MY_PRO_CARD"
                app:cardCornerRadius="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"


                android:layout_width="match_parent"
                android:background="@drawable/nest_card_back"
                android:layout_marginTop="20dp"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/roboto_mediaum_second"
                            android:textColor="@color/black_color"
                            android:textSize="14sp"
                            android:text="Property ID-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:fontFamily="@font/roboto_five"
                            android:textColor="@color/black_color"
                            android:textSize="14sp"
                            android:text="1285"
                            android:layout_marginLeft="80dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_gravity="end"
                            android:fontFamily="@font/roboto_third"
                            android:textColor="@color/black_color"
                            android:textSize="14sp"
                            android:text="Status-  2x Pending"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </FrameLayout>
                    <FrameLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/roboto_mediaum_second"
                            android:textColor="@color/black_color"
                            android:textSize="14sp"
                            android:text="Posted to "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="10dp"
                            android:src="@drawable/right_arrow"
                            android:layout_marginLeft="67dp"
                            android:layout_height="12dp" />
                        <TextView
                            android:fontFamily="@font/roboto_five"
                            android:textColor="@color/black_color"
                            android:textSize="14sp"
                            android:text="PUBLIC"
                            android:layout_marginLeft="85dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:layout_gravity="end"
                            android:fontFamily="@font/roboto_third"
                            android:textColor="@color/black_color"
                            android:textSize="14sp"
                            android:text="2BHK, Residential"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </FrameLayout>



                </LinearLayout>



            </androidx.cardview.widget.CardView>







            <TextView

                android:layout_marginTop="45dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="#DDD4D4" />
            <FrameLayout
                android:layout_marginLeft="20dp"
                android:layout_gravity="bottom"

                android:layout_width="match_parent"
                android:layout_height="80dp">





                <FrameLayout
                    android:layout_marginTop="05dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/continue_to_post"
                    android:background="@drawable/apply_background"
                    android:layout_width="match_parent"
                    android:layout_gravity="end|center_vertical"

                    android:layout_height="45dp">
                    <TextView
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_bold_first"
                        android:id="@+id/tv_view_profile"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Continue to Post"

                        />

                </FrameLayout>

            </FrameLayout>

        </LinearLayout>




    </FrameLayout>


</LinearLayout>