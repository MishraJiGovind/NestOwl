<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.nestowl.brokerapp.IntroScreenPostRequirement">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <FrameLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="55dp">



                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/left_arrow"
                        android:layout_width="18sp"
                        android:id="@+id/ARTICLES_BACK"
                        android:layout_gravity="center_vertical"
                        android:layout_height="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:text="Post Requirement"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />




                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>


        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <FrameLayout
                android:background="@color/rera_color"
                android:layout_width="match_parent"
                android:layout_height="235dp">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="For Property Owner"

                    />

                <FrameLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/roboto_mediaum_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rent/sell your property for"

                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textColor="#fff"
                        android:layout_gravity="end"
                        android:layout_marginLeft="20dp"
                        android:textSize="12sp"
                        android:background="@color/brown_color"
                        android:fontFamily="@font/roboto_mediaum_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free"

                        />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="75dp"

                    android:layout_marginTop="85dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/circle_image_view"
                    android:layout_height="75dp">
                    <ImageView
                        android:visibility="visible"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"

                        android:src="@drawable/ic_menu_gallery"
                        />


                </FrameLayout>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="165dp"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faster Tenants"

                    />



                <ImageView
                    android:id="@+id/three_dots_firs"
                    android:layout_gravity="bottom|center_horizontal"
                    android:src="@drawable/three_dots"
                    android:layout_width="55dp"
                    android:layout_height="30dp" />



            </FrameLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:orientation="vertical"

                android:layout_marginLeft="@dimen/post_property_padding_20dp"
                android:layout_marginRight="@dimen/post_property_padding_20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="1"
                        android:textColor="@color/brown_color"
                        android:textSize="36sp"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:layout_width="match_parent"
                        android:text="Draft your requirement to our certified\n prefessional agen of Particular area"
                        android:textColor="@color/brown_color"
                        android:textSize="@dimen/filter_13sp"
                        android:layout_height="wrap_content" />


                    <ImageView
                        android:layout_gravity="end|center_vertical"
                        android:layout_width="35dp"
                        android:src="@drawable/icon_one"
                        android:layout_height="35dp" />




                </FrameLayout>
                <FrameLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="2"
                        android:textColor="@color/brown_color"
                        android:textSize="36sp"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:layout_width="wrap_content"
                        android:text="No need to share contact details \n(privacy is our)top most priority "
                        android:textColor="@color/brown_color"
                        android:textSize="@dimen/filter_13sp"
                        android:layout_height="wrap_content" />


                    <ImageView
                        android:layout_gravity="end|center_vertical"
                        android:layout_width="35dp"
                        android:src="@drawable/icon_three"
                        android:layout_height="35dp" />




                </FrameLayout>
                <FrameLayout
                    android:layout_marginTop="12dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="3"
                        android:textColor="@color/brown_color"
                        android:textSize="36sp"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:layout_width="wrap_content"
                        android:text="Our professional will accept your requirement\n and will submit you proposal "
                        android:textColor="@color/brown_color"
                        android:textSize="@dimen/filter_13sp"
                        android:layout_height="wrap_content" />


                    <ImageView
                        android:layout_gravity="end|center_vertical"
                        android:layout_width="35dp"
                        android:src="@drawable/icon_two"
                        android:layout_height="35dp" />




                </FrameLayout>
                <FrameLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="4"
                        android:textColor="@color/brown_color"
                        android:textSize="36sp"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:layout_width="wrap_content"
                        android:text="Open your profile, select the best proposal and \nclose the"
                        android:textColor="@color/brown_color"
                        android:textSize="@dimen/filter_13sp"
                        android:layout_height="wrap_content" />


                    <ImageView
                        android:layout_gravity="end|center_vertical"
                        android:layout_width="35dp"
                        android:src="@drawable/icon_three"
                        android:layout_height="35dp" />




                </FrameLayout>







            </LinearLayout>




        </LinearLayout>
        <TextView
            android:layout_gravity="bottom"
            android:textColor="#000"

            android:layout_marginLeft="@dimen/post_property_padding_20dp"
            android:layout_marginRight="@dimen/post_property_padding_20dp"
            android:textSize="13sp"
            android:layout_marginBottom="75dp"
            android:fontFamily="@font/roboto_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save 0.20% on service charge on second deal with\nSelected Nest'Pro;s"

            />


        <androidx.cardview.widget.CardView
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/post_property_padding_20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp"
            android:id="@+id/select_package_card"
            app:cardBackgroundColor="@color/brown_two"
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_mediaum_second"
                android:textColor="#ffff"
                android:text="Post Requirement"
                />

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</LinearLayout>