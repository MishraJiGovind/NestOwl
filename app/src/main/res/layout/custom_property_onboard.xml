<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout

        android:layout_width="190dp"
        android:layout_height="220dp"
        android:background="@drawable/shadow_for_buyer_and_saller"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/CUSTOM_PROPERTY_ONBOARD_IMG"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/property_two" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="07dp"
            android:layout_marginRight="06dp"
            android:layout_marginBottom="05dp">


            <FrameLayout
                android:id="@+id/CUSTOM_PROPERTY_ONBOARD_MAKE_OFFER"

                android:layout_width="match_parent"
                android:layout_height="@dimen/view_profile_offer_28sp"
                android:layout_weight="1"
                android:background="@drawable/contact_builder">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="03dp"
                    android:layout_marginRight="03dp"
                    android:fontFamily="@font/sort_btn_font"
                    android:text="Make Offer"
                    android:textColor="#fff"
                    android:textSize="12sp"

                    />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/CUSTOM_PROPERTY_ONBOARD_CHAT"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_profile_offer_28sp"
                android:layout_gravity="end"
                android:layout_marginLeft="05dp"
                android:layout_weight="1"
                android:background="@drawable/chat_background">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sort_btn_font"
                    android:text="Chat"

                    android:textColor="@color/brown_color"
                    android:textSize="@dimen/text_profile_offer_12sp"

                    />

            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="105dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CUSTOM_PROPERTY_ONBOARD_ADDRESS_BHK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/first"
                android:text="â‚¹ 75 Lac, 2BHK"
                android:textColor="#000"


                android:textSize="14sp" />

            <TextView
                android:id="@+id/CUSTOM_PROPERTY_ONBOARD_SOMTHING"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="03dp"
                android:fontFamily="@font/second"
                android:text="M3M"
                android:textColor="#000"

                android:textSize="12sp" />

            <TextView
                android:id="@+id/CUSTOM_PROPERTY_ONBOARD_ADDRESS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="03dp"
                android:fontFamily="@font/second"
                android:text="Sector-104, Gurgaon,"
                android:textColor="#000"

                android:textSize="12sp" />


        </LinearLayout>


    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>