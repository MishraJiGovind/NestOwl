<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_home_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/HOME_NAVIGATION_VIEW"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_home_screen">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="170dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/home_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="06dp">

                        <ImageView
                            android:layout_width="@dimen/drawer_img_size22sp"
                            android:layout_height="@dimen/drawer_img_size22sp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/nestowll_icon" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="05dp"
                            android:text="Home"
                            android:textColor="#000"
                            android:textSize="@dimen/drawer_14dp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/HOME_MY_PROPERTYIES"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="@dimen/drawer_top_15dp">

                        <ImageView
                            android:layout_width="@dimen/drawer_img_size22sp"
                            android:layout_height="@dimen/drawer_img_size22sp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/my_property" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="05dp"
                            android:text="My Properties"
                            android:textColor="#000"
                            android:textSize="@dimen/drawer_14dp"

                            />


                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/background_drawel_black_shape">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="Sell Your Property"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/post_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="06dp">

                        <ImageView
                            android:layout_width="@dimen/drawer_img_size22sp"
                            android:layout_height="@dimen/drawer_img_size22sp"
                            android:layout_gravity="center_vertical"

                            app:srcCompat="@drawable/post_property_png" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="05dp"
                            android:text="Post Property"
                            android:textColor="#000"
                            android:textSize="@dimen/drawer_14dp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/owner_plans_home_screen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"


                        android:layout_marginTop="@dimen/drawer_top_15dp">

                        <ImageView
                            android:layout_width="@dimen/drawer_img_size22sp"
                            android:layout_height="@dimen/drawer_img_size22sp"
                            android:layout_gravity="center_vertical"

                            app:srcCompat="@drawable/subscription_plan" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="05dp"
                            android:text="Subscription Plans"
                            android:textColor="#000"
                            android:textSize="@dimen/drawer_14dp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/properties_plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="@dimen/drawer_top_15dp">

                        <ImageView
                            android:layout_width="@dimen/drawer_img_size22sp"
                            android:layout_height="@dimen/drawer_img_size22sp"
                            android:layout_gravity="center_vertical"

                            app:srcCompat="@drawable/properties_plan" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="05dp"
                            android:text="Properties Plan"
                            android:textColor="#000"
                            android:textSize="@dimen/drawer_14dp"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/HOME_LEAD_BOST"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="@dimen/drawer_top_15dp">

                        <ImageView
                            android:layout_width="@dimen/drawer_img_size22sp"
                            android:layout_height="@dimen/drawer_img_size22sp"
                            android:layout_gravity="center_vertical"

                            app:srcCompat="@drawable/leads_boost" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="05dp"
                            android:text="Leads Boast Plan"
                            android:textColor="#000"
                            android:textSize="@dimen/drawer_14dp"

                            />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/background_drawel_black_shape">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="We Care"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                    </FrameLayout>


                    <LinearLayout

                        android:id="@+id/HOME_SCREEN_FAQ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="06dp">

                        <ImageView
                            android:layout_width="@dimen/drawer_img_size22sp"
                            android:layout_height="@dimen/drawer_img_size22sp"
                            android:layout_gravity="center_vertical"

                            app:srcCompat="@drawable/documents" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="05dp"
                            android:text="FAQ"
                            android:textColor="#000"
                            android:textSize="@dimen/drawer_14dp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/HOME_SCREEN_ARTICAL"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp">

                        <ImageView
                            android:layout_width="@dimen/drawer_img_size22sp"
                            android:layout_height="@dimen/drawer_img_size22sp"
                            android:layout_gravity="center_vertical"

                            app:srcCompat="@drawable/articles" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="05dp"
                            android:text="Articles"
                            android:textColor="#000"
                            android:textSize="@dimen/drawer_14dp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/HOME_SCREEN_FEEDBACK"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="@dimen/drawer_top_15dp">

                        <ImageView
                            android:layout_width="@dimen/drawer_img_size22sp"
                            android:layout_height="@dimen/drawer_img_size22sp"
                            android:layout_gravity="center_vertical"

                            app:srcCompat="@drawable/feedback" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="05dp"
                            android:text="Feedback"
                            android:textColor="#000"
                            android:textSize="@dimen/drawer_14dp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/HOME_SCREEN_RATE_US"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="@dimen/drawer_top_15dp">

                        <ImageView
                            android:layout_width="@dimen/drawer_img_size22sp"
                            android:layout_height="@dimen/drawer_img_size22sp"
                            android:layout_gravity="center_vertical"

                            app:srcCompat="@drawable/rate_us" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="05dp"
                            android:text="Rate Us"
                            android:textColor="#000"
                            android:textSize="@dimen/drawer_14dp"

                            />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/HOME_SCREEN_SHARE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="@dimen/drawer_top_15dp">

                        <ImageView
                            android:layout_width="@dimen/drawer_img_size22sp"
                            android:layout_height="@dimen/drawer_img_size22sp"
                            android:layout_gravity="center_vertical"

                            app:srcCompat="@drawable/share" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="05dp"
                            android:text="Share"
                            android:textColor="#000"
                            android:textSize="@dimen/drawer_14dp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/HOME_SCREEN_ABOUT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="@dimen/drawer_top_15dp">

                        <ImageView
                            android:layout_width="@dimen/drawer_img_size22sp"
                            android:layout_height="@dimen/drawer_img_size22sp"
                            android:layout_gravity="center_vertical"

                            app:srcCompat="@drawable/aboutus" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="05dp"
                            android:text="About Us"
                            android:textColor="#000"
                            android:textSize="@dimen/drawer_14dp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/HOME_SCREEN_CONTACT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"

                        android:layout_marginTop="@dimen/drawer_top_15dp">

                        <ImageView
                            android:layout_width="@dimen/drawer_img_size22sp"
                            android:layout_height="@dimen/drawer_img_size22sp"
                            android:layout_gravity="center_vertical"

                            app:srcCompat="@drawable/contactus" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="05dp"
                            android:text="Contact Us"
                            android:textColor="#000"
                            android:textSize="@dimen/drawer_14dp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/HOME_SCREEN_TERMS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="@dimen/drawer_top_15dp">

                        <ImageView
                            android:layout_width="@dimen/drawer_img_size22sp"
                            android:layout_height="@dimen/drawer_img_size22sp"
                            android:layout_gravity="center_vertical"

                            app:srcCompat="@drawable/term_ofuse" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="05dp"
                            android:text="Terms of Use"
                            android:textColor="#000"
                            android:textSize="@dimen/drawer_14dp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/HOME_SCREEN_LOG_OUT"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="@dimen/drawer_top_15dp">

                        <ImageView
                            android:layout_width="@dimen/drawer_img_size22sp"
                            android:layout_height="@dimen/drawer_img_size22sp"
                            android:layout_gravity="center_vertical"

                            app:srcCompat="@drawable/logout" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="05dp"
                            android:text="Log Out"
                            android:textColor="#000"
                            android:textSize="@dimen/drawer_14dp"

                            />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </ScrollView>


    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>
