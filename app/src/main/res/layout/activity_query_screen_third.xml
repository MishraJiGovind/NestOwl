                                android:background="@drawable/proposal_status"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="wrap_content"
                                    android:text="Time Slot"
                                    android:textSize="16sp"
                                    android:textColor="@color/black_font"


                                    android:fontFamily="@font/roboto_third"

                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content" />

                                <ImageView
                                    android:layout_width="25dp"
                                    android:id="@+id/montyly_dropdown"
                                    android:layout_gravity="end|center_vertical"
                                    android:src="@drawable/down_arrow_personal"
                                    android:layout_height="25dp" />


                            </FrameLayout>




                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginLeft="@dimen/screen_sixteen_16sp"
                            android:layout_marginRight="@dimen/screen_sixteen_16sp"

                            android:background="@drawable/query_last_note"
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <CheckBox
                                android:layout_gravity="center_vertical"
                                android:layout_width="27dp"
                                android:layout_height="27dp"

                                />
                            <LinearLayout
                                android:layout_marginTop="06dp"

