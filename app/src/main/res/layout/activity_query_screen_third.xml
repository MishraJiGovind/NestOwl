                                    <LinearLayout
                                        android:layout_marginTop="03dp"
                                        android:orientation="horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">



                                        <TextView
                                            android:layout_gravity="center_vertical"
                                            android:textColor="#000"
                                            android:layout_marginLeft="05dp"
                                            android:gravity="start"
                                            android:textSize="12sp"
                                            android:textAlignment="viewStart"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Used nestowl professional service to buy this home
at your terms and condition and 1% service charge."/>


                                    </LinearLayout>


                                </FrameLayout>

                            </LinearLayout>

                        </LinearLayout>


                        <TextView
                            android:layout_marginLeft="@dimen/screen_sixteen_16sp"
                            android:layout_marginRight="@dimen/screen_sixteen_16sp"

                            android:visibility="gone"

                            android:layout_width="wrap_content"
                            android:textSize="20sp"
                            android:fontFamily="@font/roboto_bold_first"
                            android:layout_marginTop="15dp"
                            android:textColor="#000"
                            android:layout_height="wrap_content"
                            android:text="Note"
                            />
                        <LinearLayout
                            android:layout_marginLeft="@dimen/screen_sixteen_16sp"
                            android:layout_marginRight="@dimen/screen_sixteen_16sp"


                            android:layout_marginTop="15dp"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="70dp">

                                <EditText
                                    android:layout_marginRight="05dp"
                                    android:layout_marginLeft="05dp"
                                    android:background="@null"

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Your contact detail will be shared only if Owner/Agent offer."
                                    android:backgroundTint="@null"
                                    android:textColorHint="@color/color_edit_text"

                                    android:fontFamily="@font/second"
                                    android:textSize="16sp"

                                    />

                            </FrameLayout>


                        </LinearLayout>

<LinearLayout
    android:layout_marginLeft="@dimen/screen_sixteen_16sp"
    android:layout_marginRight="@dimen/screen_sixteen_16sp"

    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="55dp">

    <TextView
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:fontFamily="@font/first"
        android:layout_marginTop="15dp"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:text="Note:-"
        />
    <TextView
        android:layout_marginTop="05dp"
        android:layout_width="match_parent"
        android:textSize="14sp"
        android:layout_marginLeft="05dp"
        android:fontFamily="@font/second"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:text="Your contact detai will be shared only if Owner/Agent offer."
        />

</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft="@dimen/screen_sixteen_16sp"
        android:layout_marginRight="@dimen/screen_sixteen_16sp"

        android:fontFamily="@font/roboto_five"
        android:layout_marginTop="25dp"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:text="Thanks"
        />



