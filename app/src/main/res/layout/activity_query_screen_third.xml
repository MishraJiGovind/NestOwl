                            android:layout_marginRight="@dimen/screen_sixteen_16sp"

                            android:layout_height="wrap_content"
                            android:text="If possible accept when would you like to have a call"
                            />
                        <LinearLayout
                            android:layout_marginLeft="@dimen/screen_sixteen_16sp"
