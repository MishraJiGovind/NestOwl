    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nestowl.brokerapp.QueryScreenThird">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">



                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/left_arrow"
                        android:layout_width="18dp"
                        android:id="@+id/ARTICLES_BACK"
                        android:layout_gravity="center_vertical"
                        android:layout_height="18dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:text="Make Offer"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:fontFamily="@font/roboto_mediaum_second"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />



                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>


        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <ScrollView
            android:layout_marginTop="55dp"
            android:layout_marginBottom="80dp"
            android:layout_weight="1"

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">




                    <LinearLayout
                        android:layout_width="match_parent"

                        android:orientation="vertical"
                        android:layout_height="match_parent">



                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:layout_marginLeft="@dimen/screen_sixteen_16sp"
                            android:layout_marginRight="@dimen/screen_sixteen_16sp"

                            android:fontFamily="@font/roboto_mediaum_second"
                            android:layout_marginTop="15dp"
                            android:textColor="#000"
                            android:layout_height="wrap_content"
                            android:text="What mode of payment will you use for maximum transaction"
                            />
<HorizontalScrollView
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RadioGroup
        android:paddingRight="14dp"
        android:paddingLeft="14dp"
        android:layout_marginTop="05dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RadioButton
            android:layout_weight="1"
            android:buttonTint="@color/black_color"

            android:textSize="16sp"
            android:textColor="@color/black_color"
            android:text="Cash"
            android:fontFamily="@font/roboto_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:layout_weight="1"
            android:fontFamily="@font/roboto_third"
            android:textSize="16sp"
            android:buttonTint="@color/black_color"

            android:textColor="@color/black_color"
            android:text="Cheque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:layout_weight="1"
            android:fontFamily="@font/roboto_third"
            android:textSize="16sp"
            android:buttonTint="@color/black_color"

            android:textColor="@color/black_color"
            android:text="Some in Cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    </RadioGroup>


</HorizontalScrollView>


<HorizontalScrollView
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RadioGroup
        android:paddingRight="14dp"
        android:paddingLeft="14dp"
        android:layout_marginTop="05dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RadioButton
            android:layout_weight="1"
            android:buttonTint="@color/black_color"

            android:textSize="16sp"
            android:textColor="@color/black_color"
            android:text="RTGS"
            android:fontFamily="@font/roboto_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:layout_weight="1"
            android:fontFamily="@font/roboto_third"
            android:textSize="16sp"
            android:buttonTint="@color/black_color"

            android:textColor="@color/black_color"
            android:text="Some in Cheque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:layout_weight="1"
            android:fontFamily="@font/roboto_third"
            android:textSize="16sp"
            android:buttonTint="@color/black_color"

            android:textColor="@color/black_color"
            android:text="As per Demand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    </RadioGroup>



