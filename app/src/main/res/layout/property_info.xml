<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">





    <FrameLayout
        android:layout_marginTop="15dp"
        android:background="@drawable/filter_background"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#8A8888"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_height="wrap_content"
                    android:text="Property Info"
                    />
                <ImageView
                    android:id="@+id/iv_cancel"
                    android:src="@drawable/close_icon_multipul"
                    android:layout_width="22dp"

                    android:layout_gravity="end|center_vertical"
                    android:layout_height="22dp" />


            </FrameLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="#E6E0E0" />








            <FrameLayout
                android:layout_marginTop="20dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Property Sold Out"
                    android:textColor="#000"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:textSize="16sp"

                    />


                <TextView
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹ 16,00,000"
                    android:textColor="#000"
                    android:textSize="16sp"

                    />


            </FrameLayout>
            <FrameLayout
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registration Charges"
                    android:textColor="#7E7878"
                    android:fontFamily="@font/roboto_five"
                    android:textSize="16sp"

                    />


                <TextView
                    android:fontFamily="@font/roboto_five"
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹ 6,00,00"
                    android:textColor="#7E7878"
                    android:textSize="16sp"

                    />


            </FrameLayout>




            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E0E0" />





            <androidx.cardview.widget.CardView
                app:cardCornerRadius="30dp"
                app:cardElevation="8dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardBackgroundColor="@color/brown_two"
                android:layout_width="match_parent"
                android:layout_height="50dp">



                <TextView
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="18sp"

                    android:id="@+id/tv_employe_next"
                    android:text="Next"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>




    </FrameLayout>


</LinearLayout>