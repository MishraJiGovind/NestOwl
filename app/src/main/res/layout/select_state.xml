    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">





    <FrameLayout
        android:layout_marginTop="15dp"
        android:background="@drawable/filter_background"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/OFFICE_DIO_MAIN_TEXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:text="Select State"
                    android:textColor="#8A8888"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_cancel"
                    android:layout_width="22dp"
                    android:layout_height="22dp"

                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/close_icon_multipul" />


            </FrameLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="#E6E0E0" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/filter_padding_20sp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="@dimen/filter_padding_20sp"
                android:background="@drawable/search_view_background_home">

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/filters_rounded_30sp"
                    android:background="@null"
                    android:backgroundTint="@null"
                    android:hint="Search"
                    android:singleLine="true"
                    android:textColorHint="#C4BEBE"
                    android:textSize="12sp" />


                <ImageView

                    android:id="@+id/search_filters"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="10dp"

                    android:src="@drawable/serch_iconp" />

            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_states"

                android:layout_width="match_parent"
                android:layout_height="300dp"></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

