<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nestowl.Fragment.ProfileBroker">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/HOME_PROFILE_NAME"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold_first"
                            android:text="Sahil Dhingra"
                            android:textColor="#000"

                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/HOME_PROFILE_EMAIL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="05dp"
                            android:fontFamily="@font/second"
                            android:text="sahidhi90@gmail.com"

                            android:textColor="@color/black_color"
                            android:textSize="11sp" />

                        <LinearLayout
                            android:id="@+id/lnd_view_nest_profile"
                            android:layout_width="wrap_content"

                            android:layout_height="20dp"
                            android:layout_marginTop="05dp">


                            <TextView
                                android:id="@+id/id_view_nest_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/roboto_mediaum_second"
                                android:text="View Nest Profile"
                                android:textColor="#000"

                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="08dp"
                                android:layout_height="08dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="03dp"
                                android:layout_marginTop="02dp"
                                android:src="@drawable/arrow_right" />

                        </LinearLayout>


                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/HOME_PROFILE_DP"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="end"
                            android:scaleType="fitXY"
                            android:src="@drawable/user_icon_p" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:background="#D1CFCF"
                    android:layout_marginTop="15dp"
                    android:layout_height="1dp" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shadow_home_page"
                    android:layout_height="70dp">
                    <LinearLayout




                        android:layout_weight="1"
                        android:layout_marginTop="05dp"

                        android:id="@+id/lnr_activity"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="25dp"

                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/notification_bell" />

                            <TextView
                                android:id="@+id/textView86"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/brown_add_photos"
                                android:text="99+"
                                android:textColor="@color/white"
                                android:visibility="gone" />
                        </FrameLayout>

                        <TextView
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:layout_marginTop="02dp"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"


                            android:text="Notification"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/lnr_post_property"
                        android:layout_weight="1"
                        android:layout_marginTop="05dp"


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/edit_profile"

                            android:layout_width="25dp"
                            android:layout_height="25dp" />
                        <TextView
                            android:layout_gravity="center"
                            android:textColor="#000"

                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="02dp"

                            android:layout_height="wrap_content"

                            android:text="Edit Profile"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="05dp"

                        android:orientation="vertical"
                        android:id="@+id/lnr_payment"
                        android:layout_weight="1"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/payment"
                            android:layout_width="25dp"
                            android:layout_height="25dp" />
                        <TextView
                            android:layout_gravity="center"
                            android:layout_marginTop="02dp"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:textColor="#000"
                            android:layout_height="wrap_content"

                            android:text="Payments"
                            />

                    </LinearLayout>




                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:background="#D1CFCF"
                    android:layout_marginTop="10dp"
                    android:layout_height="1dp" />

                <FrameLayout
                    android:id="@+id/PROFILE_SERVE_INDIAN_HERO_LNR"
                    android:layout_width="match_parent"
                    android:layout_height="97dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shadow_button_background_two"
                    android:paddingTop="05dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="05dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_mediaum_second"
                            android:text="SERVE HEROS and EARN MORE"
                            android:textColor="#000"
                            android:textSize="14sp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/second"
                            android:text="If you to army,Police,Doctor,Professional,fill details"
                            android:textColor="@color/black_color"
                            android:textSize="12sp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/second"
                            android:text="to save more with Nest Pro's"

                            android:textColor="@color/black_color"
                            android:textSize="12sp"

                            />


                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/PROFILE_SERVE_INDIAN_HERO_COMPLETE"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/view_profile_offer_28sp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="05dp"
                        android:background="@drawable/post_property_background">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/view_profile_offer_28sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/sort_btn_font"
                            android:gravity="center"
                            android:text="Complete Details"
                            android:textColor="#fff"
                            android:textSize="12sp" />

                    </FrameLayout>
                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/PROFILE_FAQ"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView36"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:text="FAQ"
                            android:textColor="@color/black_color"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView85"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:text="Watch videos to resolve all queries"
                            android:textColor="@color/black_color"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/textView36"
                            app:layout_constraintTop_toBottomOf="@+id/textView36" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_mediaum_second"
                        android:layout_height="wrap_content"
                        android:text="ADDITIONAL ACTIVITY"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black_color"
                        android:textSize="14sp"
                        android:fontFamily="@font/second"

                        android:layout_marginTop="07dp"
                        android:id="@+id/saved_properties"
                        android:layout_height="wrap_content"
                        android:text="Saved Properties"
                        />
                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black_color"
                        android:textSize="14sp"
                        android:id="@+id/saved_search"
                        android:fontFamily="@font/second"
                        android:layout_marginTop="07dp"

                        android:layout_height="wrap_content"
                        android:text="Saved Search"
                        />


                </LinearLayout>

                <TextView
                    android:id="@+id/EXTRA_TEXT_VIEW_TO_HIDE"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#D1CFCF"
                    android:visibility="gone" />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#000"
                        android:id="@+id/send_feedback"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_mediaum_second"
                        android:layout_height="wrap_content"
                        android:text="Send Feedback"
                        />



                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:id="@+id/rate_us_on_the"
                        android:fontFamily="@font/roboto_mediaum_second"
                        android:layout_marginTop="07dp"
                        android:layout_height="wrap_content"
                        android:text="Rate Us on the Play Store"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#000"
                        android:fontFamily="@font/roboto_mediaum_second"
                        android:textSize="14sp"
                        android:id="@+id/logout"
                        android:layout_marginTop="07dp"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>



</LinearLayout>
