<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nestowl.brokerapp.SahilDahiyaCircle">
<ScrollView
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:fitsSystemWindows="true"
                android:background="@drawable/top_image"
                android:layout_height="200dp">
                <FrameLayout
                    android:id="@+id/ARTICLES_BACK"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_keyboard_backspace_whit"
                        android:layout_height="25dp" />
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_gravity="center_vertical|end"
                        android:src="@drawable/right_arrow_white_icon"
                        android:layout_height="25dp" />


                </FrameLayout>
                <FrameLayout
                    android:layout_marginRight="10dp"
                    android:layout_gravity="bottom|end"
                    android:layout_width="65dp"
                    android:layout_marginBottom="20dp"

                    android:background="@drawable/background_edit_camera"
                    android:layout_height="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:layout_marginLeft="05dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"
                        android:textColor="#fff"

                        />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/camera_icon"
                        android:layout_marginRight="05dp"
                        android:layout_gravity="end|center_vertical"
                        />

                </FrameLayout>


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="186dp"
                    android:background="@drawable/sign_up_design">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="55dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Sahil Dahiya"
                            android:textColor="#000"
                            android:fontFamily="@font/roboto_bold_first"
                            android:textSize="22sp"

                            />
                    </FrameLayout>


                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="70dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gurgaon"
                            android:textColor="#292828"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto_mediaum_second"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/roboto_mediaum_second"
                            android:text="Following-0"
                            android:textColor="#292828"

                            android:textSize="16sp"
                            android:visibility="gone" />

                    </FrameLayout>


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#A7A6A6" />



                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_filter_screen"
                    app:tabSelectedTextColor="@color/brown_color"
                    app:tabTextColor="#000"

                    app:tabIndicatorColor="@color/brown_color"

                    app:tabIndicatorHeight="03dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    app:tabGravity="fill"

                    app:tabTextAppearance="@style/tab_text"

                    />

                <FrameLayout
                    android:id="@+id/frame_filter_id"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                </FrameLayout>
                <androidx.viewpager.widget.ViewPager
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:id="@+id/filters_view_pager"

                    android:layout_height="wrap_content">


                </androidx.viewpager.widget.ViewPager>



            </LinearLayout>

            <FrameLayout
                android:layout_width="75dp"

                android:layout_marginTop="160dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_image_view"
                android:layout_height="75dp">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"

                    android:src="@drawable/user_icon_p"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_marginRight="05dp"
                    android:layout_gravity="center|end"
                    android:src="@drawable/camera_icon"
                    android:layout_height="15dp" />

            </FrameLayout>
        </FrameLayout>



    </LinearLayout>



</ScrollView>

</FrameLayout>