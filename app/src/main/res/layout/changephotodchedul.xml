<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/filter_background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"


        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/home_screen_two_20dp"
                android:layout_marginTop="05dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:text="SELECT OPTION"
                    android:textColor="#8A8888"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_cancel"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_gravity="start|center_vertical"

                    android:src="@drawable/back_arrow_first"
                    android:visibility="gone" />


            </FrameLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                android:background="#DDD4D4" />

            <LinearLayout
                android:id="@+id/POST_SCDULEDE_DIO_ALL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/post_property_padding_20dp"
                android:layout_marginRight="@dimen/post_property_padding_20dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Show All Category"
                    android:textColor="@color/black_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/POST_SCDULEDE_DIO_ALL_RAD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/POST_SCDULEDE_DIO_SITE_VIEW"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/post_property_padding_20dp"
                android:layout_marginRight="@dimen/post_property_padding_20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:text="Site VIew"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/POST_SCDULEDE_DIO_SITE_VIEW_RAD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/POST_SCDULEDE_DIO_EXTRIER"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/post_property_padding_20dp"
                android:layout_marginRight="@dimen/post_property_padding_20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_mediaum_second"

                    android:text="Exterior View"
                    android:textColor="#000"
                    android:textSize="16sp"

                    />

                <RadioButton
                    android:id="@+id/exterior_view_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/brown_color" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/POST_SCDULEDE_DIO_LIVING_ROOM"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/post_property_padding_20dp"
                android:layout_marginRight="@dimen/post_property_padding_20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_mediaum_second"

                    android:text="Living Room"
                    android:textColor="#000"
                    android:textSize="16sp"

                    />

                <RadioButton
                    android:id="@+id/living_room_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/brown_color" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/POST_SCDULEDE_DIO_BEDROOMS"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/post_property_padding_20dp"
                android:layout_marginRight="@dimen/post_property_padding_20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_mediaum_second"

                    android:text="Bedroom"
                    android:textColor="#000"
                    android:textSize="16sp"

                    />

                <RadioButton
                    android:id="@+id/bedroom_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/brown_color" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/POST_SCDULEDE_DIO_BATHROOMS"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/post_property_padding_20dp"
                android:layout_marginRight="@dimen/post_property_padding_20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_mediaum_second"

                    android:text="Bathrooms"
                    android:textColor="#000"
                    android:textSize="16sp"

                    />

                <RadioButton
                    android:id="@+id/bathrooms_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/brown_color" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/POST_SCDULEDE_DIO_KITCHEN"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/post_property_padding_20dp"
                android:layout_marginRight="@dimen/post_property_padding_20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_mediaum_second"

                    android:text="Kitchen"
                    android:textColor="#000"
                    android:textSize="16sp"

                    />

                <RadioButton
                    android:id="@+id/kitchen_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/brown_color" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/POST_SCDULEDE_DIO_FLOOR"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/post_property_padding_20dp"
                android:layout_marginRight="@dimen/post_property_padding_20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_mediaum_second"

                    android:text="Floor Plan"
                    android:textColor="#000"
                    android:textSize="16sp"

                    />

                <RadioButton
                    android:id="@+id/floor_plan_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/brown_color" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/POST_SCDULEDE_DIO_MASTER_PLAN"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/post_property_padding_20dp"
                android:layout_marginRight="@dimen/post_property_padding_20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_mediaum_second"

                    android:text="Master Plan"
                    android:textColor="#000"
                    android:textSize="16sp"

                    />

                <RadioButton
                    android:id="@+id/master_plan_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/brown_color" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/POST_SCDULEDE_DIO_LOCATION"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/post_property_padding_20dp"
                android:layout_marginRight="@dimen/post_property_padding_20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_mediaum_second"

                    android:text="Location Map"
                    android:textColor="#000"
                    android:textSize="16sp"

                    />

                <RadioButton
                    android:id="@+id/location_map_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/brown_color" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/POST_SCDULEDE_DIO_OTHER"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/post_property_padding_20dp"
                android:layout_marginRight="@dimen/post_property_padding_20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_mediaum_second"

                    android:text="Other"
                    android:textColor="#000"
                    android:textSize="16sp"

                    />

                <RadioButton
                    android:id="@+id/other_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/brown_color" />


            </LinearLayout>


        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:id="@+id/POST_SCDULEDE_DIO_CONTINIUE"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/apply_background"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textColor="@color/whit_button"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>