<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.nestowl.brokerapp.IntroScreenPostProperty">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <FrameLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="55dp">



                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/left_arrow"
                        android:layout_width="18dp"
                        android:id="@+id/iv33"
                        android:layout_gravity="center_vertical"
                        android:layout_height="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:text="FOR PROPERTY OWNER"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />




                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>


        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="240dp"
            >



            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager_login"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent">
            </androidx.viewpager.widget.ViewPager>
            <LinearLayout
                android:id="@+id/id_circle_indicator"
                android:layout_alignBottom="@id/view_pager_login"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_width="wrap_content"
                android:padding="20dp"
                android:layout_height="wrap_content"/>

        </FrameLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="vertical"

            android:layout_marginLeft="@dimen/post_property_padding_20dp"
            android:layout_marginRight="@dimen/post_property_padding_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="1"
                    android:textColor="@color/brown_color"
                    android:textSize="36sp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:text="Advertise on Website/App\n with privacy"
                    android:textColor="@color/brown_color"
                    android:textSize="@dimen/filter_13sp"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="35dp"
                    android:src="@drawable/icon_one"
                    android:layout_height="35dp" />




            </FrameLayout>
            <FrameLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="2"
                    android:textColor="@color/brown_color"
                    android:textSize="36sp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:text="Or you can direct post to Nest \npro with privacy"
                    android:textColor="@color/brown_color"
                    android:textSize="@dimen/filter_13sp"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="35dp"
                    android:src="@drawable/icon_three"
                    android:layout_height="35dp" />




            </FrameLayout>
            <FrameLayout
                android:layout_marginTop="30dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="3"
                    android:textColor="@color/brown_color"
                    android:textSize="36sp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:text="Received Proposal's/leads\n close the deal"
                    android:textColor="@color/brown_color"
                    android:textSize="@dimen/filter_13sp"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="35dp"
                    android:src="@drawable/icon_two"
                    android:layout_height="35dp" />




            </FrameLayout>






        </LinearLayout>




    </LinearLayout>
    <TextView
        android:layout_gravity="bottom"
        android:textColor="#000"

        android:layout_marginLeft="@dimen/post_property_padding_20dp"
        android:layout_marginRight="@dimen/post_property_padding_20dp"
        android:textSize="13sp"
        android:layout_marginBottom="85dp"
        android:fontFamily="@font/roboto_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save 0.20% on service charge on second deal with\nSelected Nest'Pro;s"

        />



    <androidx.cardview.widget.CardView
        android:layout_gravity="bottom"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="@dimen/post_property_padding_20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        android:id="@+id/select_package_card"
        app:cardBackgroundColor="@color/brown_two"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_mediaum_second"
            android:textColor="#ffff"
            android:text="Select Package"
            />

    </androidx.cardview.widget.CardView>

</FrameLayout>

</LinearLayout>