<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/CUSTOM_ALERT_PARTNER_R_MAIN"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="06dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="05dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="05dp"
            android:layout_marginBottom="62dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/CUSTOM_ALERT_PARTNER_R_BHK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="2 BHK"
                    android:textColor="#000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10sp"
                    android:background="#A7A6A6" />

                <TextView
                    android:id="@+id/CUSTOM_ALERT_PARTNER_R_FLAT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:text="Flat"
                    android:textColor="#000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10sp"
                    android:background="#A7A6A6" />

                <TextView
                    android:id="@+id/CUSTOM_ALERT_PARTNER_R_BUDGET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:text="3-4 Crore"
                    android:textColor="#000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10sp"
                    android:background="#A7A6A6" />

                <TextView

                    android:id="@+id/CUSTOM_ALERT_PARTNER_R_SQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginLeft="12sp"
                    android:layout_weight="1"
                    android:text="680 Sq.ft."
                    android:textColor="#000"
                    android:textSize="12sp" />


            </LinearLayout>


        </FrameLayout>


        <TextView

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="47dp"
            android:background="#A7A6A6" />

        <FrameLayout
            android:id="@+id/first_received"
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <FrameLayout

                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="03dp"
                    android:layout_marginRight="05dp"
                    android:background="@drawable/doctor_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="Verified by Nest"
                        android:textColor="#000"
                        android:textSize="12sp" />

                </FrameLayout>

                <FrameLayout

                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="03dp"
                    android:layout_marginRight="132dp"
                    android:background="@drawable/doctor_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Nest Pro"
                        android:textColor="#000"
                        android:textSize="12sp" />

                </FrameLayout>


            </FrameLayout>

            <FrameLayout
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="05dp"
                android:layout_marginTop="08dp"
                android:background="@drawable/circle_background">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="25dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="05dp"
                    android:src="@drawable/face_icon" />


            </FrameLayout>

            <TextView
                android:id="@+id/CUSTOM_ALERT_PARTNER_R_NAME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="06dp"
                android:fontFamily="@font/roboto_mediaum_second"
                android:text="Akhil"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/CUSTOM_ALERT_PARTNER_R_INTRESTED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/second"
                android:text="is looking to buy 2BHK in Gurgaon"
                android:textColor="#000"
                android:textSize="10sp" />


        </FrameLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="07dp"
            android:layout_marginBottom="07dp"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/CUSTOM_ALERT_PARTNER_R_CHAT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/nest_pro_rectangle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sort_btn_font"
                        android:text="Chat"

                        android:textColor="@color/brown_color"
                        android:textSize="12sp"

                        />


                </FrameLayout>

                <FrameLayout
                    android:id="@+id/CUSTOM_ALERT_PARTNER_R_VIEW_CONTACT"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="05dp"
                    android:layout_weight="1"
                    android:background="@drawable/nest_pro_rectangle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sort_btn_font"
                        android:text="View Contact"
                        android:textColor="@color/brown_color"
                        android:textSize="12sp"

                        />


                </FrameLayout>

                <FrameLayout
                    android:id="@+id/CUSTOM_ALERT_PARTNER_R_VIEW_PROPSAL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="05dp"
                    android:layout_weight="1"
                    android:background="@drawable/nest_pro_rectangle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sort_btn_font"
                        android:text="View Requirement"
                        android:textColor="@color/brown_color"
                        android:textSize="12sp"

                        />


                </FrameLayout>


            </LinearLayout>


        </HorizontalScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>