<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/filter_background"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <TextView

            android:layout_width="47dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="02dp"
            android:background="#929191" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold_first"
                android:text="Amenties"
                android:textColor="#000"
                android:textSize="22sp"

                />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/close_icon_multipul" />


        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/AMENTIES_CARD_RECYCLER"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp">

                    <FrameLayout
                        android:layout_width="110dp"

                        android:layout_height="125dp"
                        android:layout_weight="1"
                        android:background="@drawable/card_back_amenties">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/security_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="05dp"
                                android:text="Security"
                                android:textColor="#000"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="125dp"
                        android:layout_marginLeft="08dp"
                        android:layout_weight="1"
                        android:background="@drawable/card_back_amenties">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/kids_play_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="05dp"
                                android:text="Kids Play Area"
                                android:textColor="#000"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="125dp"

                        android:layout_marginLeft="08dp"
                        android:layout_weight="1"
                        android:background="@drawable/card_back_amenties">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/club_house" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="05dp"
                                android:text="Club House"
                                android:textColor="#000"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="125dp"
                        android:layout_weight="1"
                        android:background="@drawable/card_back_amenties">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/swiming_pool" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="05dp"
                                android:text="Rain Water\nHarvesting"
                                android:textColor="#000"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="110dp"

                        android:layout_height="125dp"
                        android:layout_marginLeft="08dp"
                        android:layout_weight="1"
                        android:background="@drawable/card_back_amenties">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/aaaa_png" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="05dp"
                                android:text="Event Space\nAmphitheatre"
                                android:textColor="#000"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="110dp"

                        android:layout_height="125dp"
                        android:layout_marginLeft="08dp"
                        android:layout_weight="1"
                        android:background="@drawable/card_back_amenties">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/home_icon_tym" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="05dp"
                                android:text="Power Back Up"
                                android:textColor="#000"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp">

                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="125dp"
                        android:layout_weight="1"
                        android:background="@drawable/card_back_amenties">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/card_image"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/home_icon_tym" />

                            <TextView
                                android:id="@+id/card_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="05dp"
                                android:text="Power Back Up"
                                android:textColor="#000"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="125dp"
                        android:layout_marginLeft="08dp"
                        android:layout_weight="1"
                        android:background="@drawable/card_back_amenties">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/mediation_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="05dp"
                                android:text="Mediation"
                                android:textColor="#000"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="125dp"
                        android:layout_marginLeft="08dp"
                        android:layout_weight="1"
                        android:background="@drawable/card_back_amenties">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/swiming_pool" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="05dp"
                                android:text="Swiming"
                                android:textColor="#000"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</FrameLayout>