<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="300dp">





    <FrameLayout
        android:layout_marginTop="15dp"
        android:background="@drawable/filter_background"

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_mediaum_second"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content"
                android:text="Budget"
                />
            <ImageView
                android:src="@drawable/close_icon_search"
                android:layout_width="12dp"

                android:layout_gravity="end|center_vertical"
                android:layout_height="12dp" />


        </FrameLayout>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="55dp"
            android:background="#A7A6A6" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="65dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"

            >
            <TextView
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Your Price"
                />




        </LinearLayout>



        <TextView

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="55dp"
            android:background="@color/line_color" />
        <FrameLayout
            android:layout_marginLeft="20dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="05dp"

            android:layout_width="match_parent"
            android:layout_height="40dp">



            <FrameLayout
                android:background="@drawable/reset_background"
                android:layout_width="wrap_content"
                android:layout_marginRight="65dp"
                android:layout_gravity="start|center_vertical"

                android:layout_height="34dp">

                <TextView
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#000"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear All"
                    />
            </FrameLayout>


            <FrameLayout
                android:background="@drawable/apply_background"
                android:layout_width="wrap_content"
                android:layout_marginRight="65dp"
                android:layout_gravity="end|center_vertical"

                android:layout_height="34dp">
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:textSize="14sp"
                    android:id="@+id/tv_view_profile"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apply"

                    />

            </FrameLayout>

        </FrameLayout>


    </FrameLayout>


</LinearLayout>