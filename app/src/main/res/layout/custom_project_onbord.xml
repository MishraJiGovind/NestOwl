<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CUSTOM_PROJECT_ON_BOARD_MAIN"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="180dp"
        android:background="@drawable/nest_card_back"
        android:visibility="visible"
        app:cardCornerRadius="15dp"
        app:cardElevation="05dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/CUSTOM_PROJECT_ON_BOARD_IMG"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/property_nine" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="07dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/CUSTOM_PROJECT_ON_BOARD_NAME"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:maxLines="1"
                    android:text="M3M"
                    android:textColor="@color/black_color"
                    android:textSize="13sp"
                    tools:ellipsize="end"
                    tools:singleLine="true" />

                <FrameLayout
                    android:id="@+id/CUSTOM_PROJECT_ON_BOARD_STATUS"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="end"
                    android:background="@drawable/premium_back">

                    <TextView
                        android:id="@+id/CUSTOM_PROJECT_ON_BOARD_STATUS_TEXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@font/second"
                        android:text="LIVE"
                        android:textColor="@color/black_color"
                        android:textSize="11sp" />


                </FrameLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/CUSTOM_PROJECT_ON_BOARD_DEVLOPER_NAME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/second"
                android:gravity="bottom"
                android:text="R.K. Developer"
                android:textColor="@color/black_color"
                android:textSize="13sp" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="68dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/roboto_third"
                    android:text="7% Service Charge "
                    android:textColor="#000"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="4dp"
                    android:background="#A7A6A6" />

                <TextView
                    android:id="@+id/CUSTOM_PROJECT_ON_BOARD_TYPE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0"
                    android:text="Commercial"
                    android:textColor="@color/black_color"
                    android:textSize="13dp" />

            </LinearLayout>


        </FrameLayout>

        <TextView
            android:id="@+id/CUSTOM_PROJECT_ON_BOARD_BUDGET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="93dp"
            android:fontFamily="@font/roboto_third"
            android:text="Demand  :â‚¹ 2.2 Crore"
            android:textColor="@color/black_color"
            android:textSize="13sp" />

        <FrameLayout
            android:id="@+id/CUSTOM_PROJECT_ON_BOARD_SEE_DETAILS"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/contact_builder">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="20dp"

                android:fontFamily="@font/sort_btn_font"
                android:text="See Details"
                android:textColor="#fff"
                android:textSize="@dimen/text_profile_offer_12sp"

                />

        </FrameLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>