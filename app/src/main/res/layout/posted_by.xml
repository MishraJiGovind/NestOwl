<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent">





    <FrameLayout
        android:layout_marginTop="15dp"
        android:background="@drawable/filter_background"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#8A8888"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_height="wrap_content"
                    android:text="Posted By"
                    />
                <ImageView
                    android:id="@+id/iv_cancel"
                    android:src="@drawable/close_icon_search"
                    android:layout_width="15dp"

                    android:layout_gravity="end|center_vertical"
                    android:layout_height="15dp" />


            </FrameLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="#DDD4D4" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/recycler_view_property_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                />

            <LinearLayout

                android:layout_marginLeft="20dp"
                android:layout_marginTop="65dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="35dp"

                >

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:background="@drawable/ready_to_move_rounded_background"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Studio"

                        />


                </FrameLayout>
                <FrameLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:background="@drawable/ready_to_move_rounded_background"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 BHK"

                        />


                </FrameLayout>

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:background="@drawable/ready_to_move_rounded_background"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 BHK"

                        />


                </FrameLayout>


            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"

                >

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:background="@drawable/ready_to_move_rounded_background"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 BHK"

                        />


                </FrameLayout>
                <FrameLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:background="@drawable/ready_to_move_rounded_background"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 BHK"

                        />


                </FrameLayout>

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:background="@drawable/ready_to_move_rounded_background"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7> BHK"

                        />


                </FrameLayout>


            </LinearLayout>

            <TextView

                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="#DDD4D4" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"

                android:layout_gravity="bottom"
                android:layout_marginLeft="25dp">


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginTop="05dp"

                    android:background="@drawable/reset_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:fontFamily="@font/roboto_bold_first"
                        android:text="Clear All"
                        android:textColor="#000"
                        android:textSize="14sp" />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="105dp"
                    android:layout_height="45dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginTop="05dp"
                    android:layout_marginRight="20dp"

                    android:background="@drawable/apply_background">

                    <TextView
                        android:id="@+id/tv_view_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_bold_first"
                        android:text="Apply"
                        android:textColor="#fff"
                        android:textSize="14sp"

                        />

                </FrameLayout>

            </FrameLayout>

        </LinearLayout>




    </FrameLayout>


</LinearLayout>