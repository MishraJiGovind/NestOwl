<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="175dp"
        android:layout_height="0dp"
        android:background="@drawable/background_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/CUSTOM_BROKER_DEALS_IMG"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/background_image_personal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="07dp"
            android:layout_marginTop="145dp"
            android:layout_marginRight="07dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/location_top" />


                <TextView
                    android:id="@+id/CUSTOM_BROKER_DEALS_TITLE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_third"
                    android:text="Gurgaon"

                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RatingBar

                    android:id="@+id/CUSTOM_BROKER_DEALS_RATINGBAR"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"


                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:numStars="5"
                    android:rating="5"
                    android:saveEnabled="true"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:theme="@style/RatingBar" />


            </LinearLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="05dp"
                android:background="#A7A6A6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/CUSTOM_BROKER_DEALS_ADRESS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="05dp"
                    android:fontFamily="@font/roboto_third"
                    android:text="10"
                    android:textColor="#000"

                    android:textSize="14sp" />


            </LinearLayout>


        </LinearLayout>


    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>