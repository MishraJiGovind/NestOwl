<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/CUSTOM_MY_PROPERTY_PENDING"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_apartment_background"
        android:orientation="vertical"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="05dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/CUSTOM_MY_PROPERTY_PENDING_NAME"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold_first"
                        android:text="1 BHK for Sale"
                        android:textColor="#000"
                        android:textSize="12dp" />


                </LinearLayout>


                <FrameLayout
                    android:id="@+id/CUSTOM_MY_PROPERTY_PENDING_POST"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="end|center"
                    android:layout_marginRight="05dp"
                    android:background="@drawable/know_more_back">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="05dp"
                        android:layout_marginRight="05dp"
                        android:text="Post to continue"
                        android:textColor="@color/black_light"
                        android:textSize="10sp"

                        />

                </FrameLayout>


            </FrameLayout>


            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="40dp"
                android:background="#A7A6A6" />

            <FrameLayout
                android:id="@+id/CUSTOM_MY_PROPERTY_PENDING_ADD_PHOTO"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="55dp"
                android:background="@drawable/search_by_activity">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="05dp"

                    android:layout_marginRight="05dp"
                    android:background="@drawable/add_photos_back">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="05dp"
                        android:paddingRight="05dp"
                        android:text="Add Photo"
                        android:textColor="#000"
                        android:textSize="08sp"
                        android:textStyle="bold"

                        />


                </FrameLayout>

            </FrameLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"


                    android:background="@drawable/city_gurgaon_background">

                    <TextView
                        android:id="@+id/CUSTOM_MY_PROPERTY_PENDING_CITY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:fontFamily="@font/second"
                        android:text="City: Gurgaon"
                        android:textColor="#000" />


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/city_gurgaon_background">

                    <TextView
                        android:id="@+id/CUSTOM_MY_PROPERTY_PENDING_BEDROOMS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center|center_horizontal"
                        android:fontFamily="@font/second"
                        android:text="Bedroom: NA"
                        android:textColor="#000" />


                </FrameLayout>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="89dp"
                android:layout_marginRight="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"


                    android:background="@drawable/city_gurgaon_background">

                    <TextView
                        android:id="@+id/CUSTOM_MY_PROPERTY_PENDING_FLOOR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center|center_horizontal"
                        android:fontFamily="@font/second"
                        android:text="Floor: NA"
                        android:textColor="#000" />


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/city_gurgaon_background">

                    <TextView
                        android:id="@+id/CUSTOM_MY_PROPERTY_PENDING_CARPETE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center|center_horizontal"
                        android:fontFamily="@font/second"
                        android:text="Corprate: NA"
                        android:textColor="#000" />


                </FrameLayout>

            </LinearLayout>


        </FrameLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>