<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whit_button"
    android:orientation="vertical"
    tools:context="com.nestowl.brokerapp.SelectWorkingLocalities">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ARTICLES_BACK"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="@dimen/screen_sixteen_16sp"
            android:layout_marginTop="25dp"
            android:src="@drawable/close_icon_search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/screen_sixteen_16sp"
            android:layout_marginTop="17dp"

            android:layout_marginRight="@dimen/screen_sixteen_16sp"
            android:fontFamily="@font/roboto_mediaum_second"
            android:text="Select Working Localities in Gurgaon"
            android:textColor="#000"
            android:textSize="16sp"

            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/screen_sixteen_16sp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="@dimen/screen_sixteen_16sp"
            android:background="@drawable/search_view_background_home">

            <EditText
                android:id="@+id/LOCALITIES_INPUT_SEARCH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:backgroundTint="@null"
                android:hint="Enter Working Localities in gurgaon"
                android:singleLine="true"
                android:textColorHint="#C4BEBE"
                android:textSize="12sp" />


            <ImageView

                android:id="@+id/search_filters"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="10dp"

                android:src="@drawable/serch_iconp" />

        </FrameLayout>


        <TextView

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:background="#DBD9D9" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/city_centric_back">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/screen_sixteen_16sp"
                android:fontFamily="@font/roboto_third"
                android:text="Selecting Working Localities"
                android:textColor="#000"
                android:textSize="16sp"

                />

        </FrameLayout>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DBD9D9" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/LOCALITIES_RECYLER"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

    <androidx.cardview.widget.CardView

        android:id="@+id/card_cont"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/screen_sixteen_16sp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="@dimen/screen_sixteen_16sp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/brown_two"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45sp"
            android:layout_marginBottom="@dimen/dimen_bottom_10sp"

            android:fontFamily="@font/first"
            android:gravity="center"
            android:text="SUBMIT PINCODE"


            android:textColor="#fff"
            android:textSize="16sp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="60dp"
        android:background="@drawable/city_centric_back">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Not Found in The List? "
                    android:textColor="#000"
                    android:textSize="13sp"


                    />

                <TextView
                    android:id="@+id/locality_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Click Here to Add"
                    android:textColor="@color/brown_color"
                    android:textSize="13sp"


                    />

            </LinearLayout>


        </FrameLayout>


    </LinearLayout>


</FrameLayout>