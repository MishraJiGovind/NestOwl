<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.nestowl.brokerapp.PostRequirements">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <FrameLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:text="Clear All"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">



                </TextView>



                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/left_arrow"
                        android:layout_width="18sp"
                        android:id="@+id/ARTICLES_BACK"
                        android:layout_gravity="center_vertical"
                        android:layout_height="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:text="Post Requirements"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />




                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>


        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">



            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_filter_screen"
                app:tabSelectedTextColor="@color/brown_color"
                app:tabTextColor="#000"

                app:tabIndicatorColor="@color/brown_color"

                app:tabIndicatorHeight="03dp"
                android:scrollbars="horizontal"
                app:tabMode="scrollable"



                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                app:tabGravity="fill"


                app:tabTextAppearance="@style/tab_text"

                />

            <FrameLayout
                android:id="@+id/frame_filter_id"

                android:layout_width="match_parent"
                android:layout_height="match_parent">



            </FrameLayout>
            <androidx.viewpager.widget.ViewPager
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:id="@+id/filters_view_pager"

                android:layout_height="wrap_content">


            </androidx.viewpager.widget.ViewPager>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">




            </ScrollView>


        </LinearLayout>




</LinearLayout>