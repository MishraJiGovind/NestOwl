<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nestowl.brokerapp.SahilDahiyaCircle">

    <com.google.android.material.appbar.AppBarLayout

        android:id="@+id/sahil_dahiya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:visibility="gone">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/left_arrow" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sahil Dahiya"
                            android:textColor="#fff"
                            android:textSize="20sp"

                            />


                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>


        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
    android:id="@+id/scroll"

    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:fitsSystemWindows="true">

                <ImageView
                    android:id="@+id/PROFILE_COVER"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/top_image" />

                <FrameLayout
                    android:id="@+id/ARTICLES_BACK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/PROFILE_BACK"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_keyboard_backspace_whit" />

                    <ImageView
                        android:id="@+id/PROFILE_SHARE"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical|end"
                        android:src="@drawable/right_arrow_white_icon" />


                </FrameLayout>

                <FrameLayout
                    android:id="@+id/PROFILE_EDIT"
                    android:layout_width="65dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom|end"

                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/background_edit_camera">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="05dp"
                        android:text="Edit"
                        android:textColor="#fff"
                        android:textSize="14sp"

                        />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginRight="05dp"
                        android:src="@drawable/camera_icon" />

                </FrameLayout>


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="186dp"
                    android:background="@drawable/sign_up_design">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="55dp">


                        <TextView
                            android:id="@+id/PROFILE_NAME"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_bold_first"
                            android:text="Sahil Dahiya"
                            android:textColor="#000"

                            android:textSize="22sp" />
                    </FrameLayout>


                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="70dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/PROFILE_CITY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_mediaum_second"
                        android:text="Gurgaon"
                        android:textColor="#292828"

                        android:textSize="16sp" />


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#A7A6A6" />


                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_filter_screen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="#fff"

                    app:tabGravity="fill"

                    app:tabIndicatorColor="@color/brown_color"
                    app:tabIndicatorHeight="03dp"
                    app:tabMode="scrollable"
                    app:tabSelectedTextColor="@color/brown_color"

                    app:tabTextAppearance="@style/tab_text"

                    app:tabTextColor="#000"
                    tools:tabIndicatorFullWidth="true" />

                <FrameLayout
                    android:id="@+id/frame_filter_id"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                </FrameLayout>
                <androidx.viewpager.widget.ViewPager
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:id="@+id/filters_view_pager"

                    android:layout_height="wrap_content">


                </androidx.viewpager.widget.ViewPager>



            </LinearLayout>

            <FrameLayout
                android:layout_width="75dp"

                android:layout_marginTop="160dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_image_view"
                android:layout_height="75dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/PROFILE_DP"
                        android:layout_width="75dp"
                        android:layout_height="75dp"

                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/user_icon_p" />
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/PROFILE_DP_EDIT"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center|end"
                    android:layout_marginRight="05dp"
                    android:src="@drawable/camera_icon" />

            </FrameLayout>
        </FrameLayout>



    </LinearLayout>



</ScrollView>

</FrameLayout>