            <androidx.cardview.widget.CardView
                android:layout_marginTop="35dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/brown_two"
                android:layout_width="match_parent"
