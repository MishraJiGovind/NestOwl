<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.newprojectr.com.nestowl.newprojectr.PartnerRequirementFirstCard">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">



                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/left_arrow"
                        android:layout_width="18dp"
                        android:id="@+id/iv34"
                        android:layout_gravity="center_vertical"
                        android:layout_height="18dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:text="Nest Pro' Details"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />



                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>


        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_marginRight="@dimen/post_property_padding_20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="05dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_gravity="center"
                        android:src="@drawable/nest_circle_back"
                        android:layout_height="22dp" />


                    <ImageView
                        android:layout_width="22dp"
                        android:layout_marginLeft="05dp"
                        android:layout_gravity="center"
                        android:src="@drawable/nest_circle_back"
                        android:layout_height="22dp" />
                </LinearLayout>


                <LinearLayout

                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <FrameLayout
                        android:layout_width="45dp"
                        android:background="@drawable/circle_background"
                        android:layout_height="45dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_marginBottom="05dp"
                            android:src="@drawable/face_icon"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_height="30dp" />


                    </FrameLayout>
                    <LinearLayout
                        android:layout_marginLeft="05dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rahul Yadav"
                                android:textColor="#000"
                                android:fontFamily="@font/roboto_mediaum_second"
                                android:textSize="16sp"

                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="05dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="has sent you requirement"
                                android:textColor="#000"
                                android:fontFamily="@font/second"
                                android:textSize="13sp"

                                />



                        </LinearLayout>


                        <FrameLayout
                            android:background="@drawable/contact_builder"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="05dp"
                            android:id="@+id/view_profile_nes_pro"

                            android:layout_height="@dimen/view_profile_offer_28sp">
                            <TextView
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:textSize="10sp"
                                android:id="@+id/tv_view_profile"
                                android:textColor="#fff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View Profile"

                                />

                        </FrameLayout>



                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>



            <FrameLayout

                android:layout_marginTop="25dp"

                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requirement"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp"


                    />

                <FrameLayout
                    android:visibility="visible"
                    android:layout_gravity="end"
                    android:layout_marginLeft="05dp"
                    android:id="@+id/CUSTOM_ALERT_PARTNER_S_VIEW_REQ"
                    android:background="@drawable/nest_pro_rectangle"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp">


                    <TextView
                        android:textSize="13sp"
                        android:fontFamily="@font/second"
                        android:textColor="@color/black_color"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"

                        android:layout_height="wrap_content"
                        android:text="View Requirement"/>
                </FrameLayout>




            </FrameLayout>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_marginTop="07dp"
                android:layout_height="120dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="06dp"
                    android:layout_marginTop="03dp"
                    android:layout_marginLeft="05dp"
                    android:background="@drawable/nest_card_back"
                    android:layout_weight="1"

                    android:layout_height="110dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BHK"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/second"
                            android:textSize="14sp"
                            android:layout_marginTop="10dp"


                            android:textColor="#000"
                            />
                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 BHK"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/roboto_mediaum_second"
                            android:textSize="16sp"


                            android:textColor="#000"
                            />
                    </LinearLayout>




                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:background="@drawable/nest_card_back"
                    android:layout_weight="1"
                    android:layout_marginTop="03dp"

                    app:cardCornerRadius="15dp"
                    app:cardElevation="06dp"
                    android:layout_marginLeft="05dp"

                    android:layout_height="110dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Locality"
                            android:layout_gravity="center_horizontal"
                            android:textSize="14sp"
                            android:fontFamily="@font/second"
                            android:layout_marginTop="10dp"


                            android:textColor="#000"
                            />
                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Tilak Nagar"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto_mediaum_second"


                            android:textColor="#000"
                            />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="05dp"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="03dp"

                    android:layout_marginRight="05dp"

                    app:cardElevation="06dp"
                    android:background="@drawable/nest_card_back"
                    android:layout_weight="1"

                    android:layout_height="110dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Budget"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/second"
                            android:textSize="14sp"
                            android:layout_marginTop="10dp"


                            android:textColor="#000"
                            />
                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹ 3 Crore"
                            android:fontFamily="@font/roboto_mediaum_second"
                            android:textSize="16sp"


                            android:textColor="#000"
                            />
                    </LinearLayout>




                </androidx.cardview.widget.CardView>




            </LinearLayout>


        </LinearLayout>


        <HorizontalScrollView
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:fillViewport="true"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:measureAllChildren="false"
            android:scrollbars="none"
            android:layout_height="@dimen/bottom_size_height_button_40sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:background="@drawable/nest_pro_rectangle"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Chat"
                        android:textColor="@color/brown_color"

                        />



                </FrameLayout>

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="05dp"
                    android:background="@drawable/nest_pro_rectangle"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="12sp"
                        android:layout_gravity="center"

                        android:textColor="@color/brown_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Contact"

                        />



                </FrameLayout>



            </LinearLayout>



        </HorizontalScrollView>

    </FrameLayout>




</LinearLayout>
