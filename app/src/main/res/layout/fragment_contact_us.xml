<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.nestowl.Fragment.ContactUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/CONTACT_US_SUMBITED_SCREEN_FARM"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="65dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/roboto_bold_first"

                            android:text="Please share your Contact"
                            android:textColor="#000"
                            android:textSize="22sp"
                            android:textStyle="bold"

                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"

                            android:layout_marginLeft="@dimen/post_property_padding_20dp"

                            android:layout_marginTop="@dimen/filter_18sp"

                            android:layout_marginRight="@dimen/post_property_padding_20dp"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical">


                                <EditText
                                    android:id="@+id/PROFILE_CONTACT_US_NAME"

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20dp"
                                    android:background="@null"
                                    android:backgroundTint="@null"

                                    android:fontFamily="@font/second"
                                    android:hint="Name"
                                    android:textColorHint="@color/color_edit_text"

                                    android:textSize="16sp" />

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="30dp"
                                    android:background="#D8D6D6" />


                            </FrameLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"

                            android:layout_marginLeft="@dimen/post_property_padding_20dp"

                            android:layout_marginTop="@dimen/filter_18sp"

                            android:layout_marginRight="@dimen/post_property_padding_20dp"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical">


                                <EditText
                                    android:id="@+id/PROFILE_CONTACT_US_PHONE"

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20dp"
                                    android:background="@null"
                                    android:backgroundTint="@null"

                                    android:fontFamily="@font/second"
                                    android:hint="Mobile"
                                    android:textColorHint="@color/color_edit_text"

                                    android:textSize="16sp" />

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="30dp"
                                    android:background="#D8D6D6" />


                            </FrameLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"

                            android:layout_marginLeft="@dimen/post_property_padding_20dp"

                            android:layout_marginTop="@dimen/filter_18sp"

                            android:layout_marginRight="@dimen/post_property_padding_20dp"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical">


                                <EditText
                                    android:id="@+id/PROFILE_CONTACT_US_EMAIL_ADDRESS"

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20dp"
                                    android:background="@null"
                                    android:backgroundTint="@null"

                                    android:fontFamily="@font/second"
                                    android:hint="Your Email Address"
                                    android:textColorHint="@color/color_edit_text"

                                    android:textSize="16sp" />

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="30dp"
                                    android:background="#D8D6D6" />


                            </FrameLayout>

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:layout_marginLeft="@dimen/post_property_padding_20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="@dimen/post_property_padding_20dp"
                            android:background="@drawable/background_lenght">

                            <EditText
                                android:id="@+id/PROFILE_CONTACT_US_QURY"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@null"
                                android:backgroundTint="@null"
                                android:hint="Please Mention Your Query"
                                android:singleLine="false"
                                android:textColorHint="@color/color_edit_text"
                                android:textSize="@dimen/text_sign_up_16sp" />

                        </FrameLayout>


                    </LinearLayout>


                </LinearLayout>


            </ScrollView>

            <androidx.cardview.widget.CardView
                android:id="@+id/PROFILE_CONTACT_US_SUMBIT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"

                android:layout_marginLeft="@dimen/post_property_padding_20dp"
                android:layout_marginTop="20dp"

                android:layout_marginRight="@dimen/post_property_padding_20dp"


                app:cardBackgroundColor="@color/brown_two"
                app:cardCornerRadius="30dp"
                app:cardElevation="@dimen/card_elevation_05dp">


                <TextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:text="SUBMIT DETAILS"
                    android:textColor="#ffff"
                    android:textSize="18sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/CONTACT_US_SUMBITED_SCREEN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/check_black_right"
                app:layout_constraintBottom_toTopOf="@+id/CONTACT_US_SUMBITED_SCREEN_HOME"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/Greeen" />

            <TextView
                android:id="@+id/textView98"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Sumbited Succesfully"
                android:textColor="@color/Greeen"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView25" />

            <androidx.cardview.widget.CardView
                android:id="@+id/CONTACT_US_SUMBITED_SCREEN_HOME"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/brown"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/textView99"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Go to Home Screen"
                    android:textColor="@color/whit_button"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</FrameLayout>
