<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">





    <FrameLayout
        android:layout_marginTop="15dp"
        android:background="@drawable/filter_background"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:text="Expertise in"
                    android:textColor="#8A8888"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_cancel"
                    android:layout_width="22dp"
                    android:layout_height="22dp"

                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/close_icon_multipul" />


            </FrameLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="#E6E0E0" />


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="300dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RadioGroup
            android:layout_marginTop="20dp"
            android:paddingRight="17dp"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resale Original"
                android:layoutDirection="rtl"
                android:id="@+id/resale_original"
                android:textColor="#000"
                android:fontFamily="@font/roboto_mediaum_second"
                android:textSize="16sp"

                />




            <CheckBox
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Original Booking"
                android:textColor="#000"
                android:layoutDirection="rtl"
                android:id="@+id/tv_original_booking"
                android:fontFamily="@font/roboto_mediaum_second"
                android:textSize="16sp"
                />
            <CheckBox
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resale Premium Property"
                android:textColor="#000"
                android:id="@+id/resale_premium_property"
                android:layoutDirection="rtl"
                android:fontFamily="@font/roboto_mediaum_second"
                android:textSize="16sp"

                />

            <CheckBox
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:text="Best negotiator for buyers"
                android:id="@+id/best_negotiation_for_buyers"
                android:textColor="#000"
                android:fontFamily="@font/roboto_mediaum_second"
                android:textSize="16sp"
                />
            <CheckBox
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Best negotiator for sellers"
                android:textColor="#000"
                android:layoutDirection="rtl"
                android:id="@+id/best_negotiation_for_sellers"
                android:fontFamily="@font/roboto_mediaum_second"
                android:textSize="16sp"
                />
            <CheckBox
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pre launch project"
                android:textColor="#000"
                android:id="@+id/pre_launch_project"
                android:layoutDirection="rtl"
                android:fontFamily="@font/roboto_mediaum_second"
                android:textSize="16sp"
                />
            <CheckBox
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lease commercial properties"
                android:textColor="#000"
                android:layoutDirection="rtl"
                android:id="@+id/lease_commercial_properties"
                android:fontFamily="@font/roboto_mediaum_second"
                android:textSize="16sp"

                />

            <CheckBox
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New launch project"
                android:textColor="#000"
                android:id="@+id/new_launch_project"
                android:layoutDirection="rtl"
                android:fontFamily="@font/roboto_mediaum_second"
                android:textSize="16sp"

                />

            <CheckBox
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rent residential properties"
                android:textColor="#000"
                android:id="@+id/rent_residential_properties"
                android:layoutDirection="rtl"
                android:fontFamily="@font/roboto_mediaum_second"
                android:textSize="16sp"

                />

        </RadioGroup>

    </LinearLayout>




</ScrollView>



            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E0E0" />




            <androidx.cardview.widget.CardView
                android:layout_marginTop="25dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="8dp"
                android:id="@+id/dialog_submit"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                app:cardBackgroundColor="@color/brown_two"
                android:layout_width="match_parent"
                android:layout_height="50dp">


                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_mediaum_second"
                    android:textColor="#ffff"
                    android:text="Submit"
                    />

            </androidx.cardview.widget.CardView>



        </LinearLayout>




    </FrameLayout>


</LinearLayout>